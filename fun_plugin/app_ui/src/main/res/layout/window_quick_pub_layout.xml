<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#a6000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/white_f7_top_radius_16dp"
        android:padding="16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#FF0D0D0D"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你对商品的感受是？"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#FF191919"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_publish"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="发布"
                android:textSize="13sp"
                android:textColor="#E6000000"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0.4"
                android:background="@drawable/blue_radius_20"
                android:textStyle="bold"/>

        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_product_card_bg"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:id="@+id/iv_product_img"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/default_icon"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:id="@+id/tv_sign_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_product_img"
                    android:textColor="#E6000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="苹果2020款 air pro无线蓝牙耳机降噪处理，保证正品，反对非法的丰苹果2020款 air pro无线蓝牙耳机降噪处理，保证正品，反对非法的丰富"/>

                <LinearLayout
                    android:id="@+id/ll_sign_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_product_img"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0d0d0d"/>
                    <TextView
                        android:id="@+id/tv_sign_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,800"
                        android:textSize="20sp"
                        android:textColor="#0d0d0d"
                        android:textStyle="bold"
                        />
                </LinearLayout>



            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:id="@+id/rl_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@mipmap/recommend_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="推荐"
                        android:textColor="#E6000000"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:drawableLeft="@mipmap/recommend_icon"
                        android:gravity="center"
                        android:drawablePadding="4dp"/>

                    <ImageView
                        android:id="@+id/iv_recommend_choose"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/radio_check_icon"
                        android:layout_marginLeft="12dp"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_un_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@mipmap/no_recommend_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="避雷"
                        android:textColor="#E6000000"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:drawableLeft="@mipmap/un_recommend_icon"
                        android:gravity="center"
                        android:drawablePadding="4dp"/>

                    <ImageView
                        android:id="@+id/iv_un_recommend_choose"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/radio_check_icon"
                        android:layout_marginRight="12dp"
                        android:visibility="invisible"/>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">
            <com.shunlai.ui.EditTextWithScrollView
                android:id="@+id/et_ugc_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="说说买东西的心得，分享好物，晒一下你的真实感受"
                android:gravity="top|left"
                android:textSize="15sp"
                android:textColorHint="#4D000000"
                android:inputType="textMultiLine"
                android:layout_marginRight="32dp"/>
            <LinearLayout
                android:id="@+id/iv_go_publish"
                android:layout_width="32dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:paddingTop="8dp"
                android:visibility="visible"
                android:gravity="right">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/lashen_icon"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
