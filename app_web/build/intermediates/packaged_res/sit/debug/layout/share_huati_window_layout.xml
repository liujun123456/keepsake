<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:background="#a6000000">


    <LinearLayout
        android:id="@+id/share_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/white_top_radius_15"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/tv_share_we_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/share_we_chat_icon"
                    android:text="微信好友"
                    android:textColor="#66000000"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="32dp"
                    android:drawablePadding="8dp"/>
                <TextView
                    android:id="@+id/tv_share_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/share_circle_icon"
                    android:text="朋友圈"
                    android:textColor="#66000000"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="32dp"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:id="@+id/tv_share_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/share_qq_icon"
                    android:text="QQ"
                    android:textColor="#66000000"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="32dp"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:id="@+id/tv_share_qq_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/share_qq_zone_icon"
                    android:text="QQ空间"
                    android:textColor="#66000000"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="28dp"
                    android:drawablePadding="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f4f4f4"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>

        <TextView
            android:id="@+id/tv_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textSize="15sp"
            android:textColor="#99000000"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
