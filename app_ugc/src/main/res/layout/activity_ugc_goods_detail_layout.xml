<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_layout"
    android:background="#ffffff">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_goods"
        android:layout_above="@id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:visibility="gone"
        android:padding="20dp">
        <TextView
            android:id="@+id/go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="12sp"
            android:drawableTop="@mipmap/home_icon"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:onClick="goHome"
            android:textColor="#0d0d0d"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/go_chat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="问问ta"
            android:textSize="12sp"
            android:drawableTop="@mipmap/chat_icon"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textColor="#0d0d0d"
            android:onClick="goChat"
            android:layout_toRightOf="@id/go_home"/>

        <TextView
            android:id="@+id/go_buy"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:background="@drawable/black_radius_24"
            android:layout_alignParentRight="true"
            android:text="立即购买"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:onClick="goBuy"
            android:gravity="center"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:paddingTop="@dimen/title_padding"
        android:background="#00ffffff">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:onClick="goBack"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@mipmap/arrow_left_back"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:onClick="goShare"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/share_icon"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"/>

</RelativeLayout>
