<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/user_default_icon"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩具坑"
            android:textSize="13sp"
            android:textColor="#0d0d0d"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_below="@id/tv_user_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="13sp"
            android:text="看文章开头对电影情节的介绍，感觉这部电影并不需要女主角。"/>
        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/like_icon_style_one"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="2 小时前"
            android:textColor="#999999"
            android:textSize="12sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ll_child_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_below="@id/tv_time"
            android:paddingTop="16dp"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_more_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/gray_18_radius_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="查看更多回复"
            android:gravity="center"
            android:layout_below="@id/ll_child_evaluate"
            android:textSize="12sp"
            android:textColor="#191919"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:textStyle="bold"
            android:layout_marginLeft="56dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/tv_more_evaluate"/>
    </RelativeLayout>

</LinearLayout>
