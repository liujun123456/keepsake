<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.stx.xhb.androidx.XBanner
        android:id="@+id/x_banner"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:pointNormal="@drawable/point_normal_bg"
        app:pointSelect="@drawable/point_choose_bg"
        app:pointsPosition="CENTER"
        app:pageChangeDuration="800"
        app:AutoPlayTime="3000"
        app:isAutoPlay="false"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥"
            android:textColor="#0d0d0d"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_price_label"
            android:textSize="22sp"
            android:textColor="#0d0d0d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_price_label"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_product_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price_label"
            android:text=""
            android:layout_marginLeft="18dp"
            android:layout_marginRight="58dp"
            android:layout_marginTop="8dp"
            android:textColor="#0d0d0d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_desc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
