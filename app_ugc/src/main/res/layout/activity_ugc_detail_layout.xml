<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="#f7f7f7">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_evaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:background="#ffffff"/>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="144dp"
            android:text="说点什么…"
            android:textColor="#B2B2B2"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/comment_input_bg"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/star_icon_style_one"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="#191919"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@id/tv_star"
            android:drawableLeft="@mipmap/like_icon_style_one"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="#191919"
            android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#F2F2F2"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#88000000"
        android:orientation="vertical"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:background="@color/chat_white"
            android:paddingRight="16dp">
            <EditText
                android:id="@+id/et_msg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/comment_input_bg"
                android:layout_marginRight="70dp"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_send"
                android:layout_width="45dp"
                android:layout_height="28dp"
                android:background="@drawable/black_radius_2_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="发送"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
