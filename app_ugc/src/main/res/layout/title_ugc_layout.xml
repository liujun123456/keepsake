<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:src="@mipmap/arrow_left_back"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/user_default_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ll_back"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:text=""
        android:textSize="14sp"
        android:textColor="#0d0d0d"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"/>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ugc_share_icon"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>
    <TextView
        android:id="@+id/tv_attention_state"
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:background="@drawable/have_attention_bg"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_more"
        android:text="已关注"
        android:textSize="11sp"
        android:textColor="#191919"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:visibility="gone"/>

</RelativeLayout>
