<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_16_radius"
        android:orientation="vertical"
        android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/iv_comment_img"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:src="@mipmap/default_icon"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#0D0D0D"
            android:text="秋色山林的美好青春"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <com.shunlai.ui.StarLayout
            android:id="@+id/sl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chooseIcon="@mipmap/star_icon_choose_style_one"
            app:isIndicator="true"
            app:maxStar="5"
            app:rating="4"
            app:star_height="14dp"
            app:star_width="14dp"
            android:layout_marginTop="2dp"
            app:unChooseIcon="@mipmap/star_icon_style_one"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/user_default_icon"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_user_avatar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="沉默的Kavince"
                android:textColor="#0D0D0D"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_fabulous_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0D0D0D"
                android:textSize="11sp"
                android:text="2385"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/iv_fabulous_label"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_toLeftOf="@id/tv_fabulous_count"
                android:src="@mipmap/un_fabulous_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
