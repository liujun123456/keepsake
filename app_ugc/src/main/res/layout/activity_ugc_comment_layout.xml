<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f7f7f7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="60dp"
            android:background="@drawable/black_radius_24"
            android:text="人气"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="60dp"
            android:background="@drawable/gray_24_radius_bg"
            android:text="最新评价"
            android:textSize="12sp"
            android:textColor="#0D0D0D"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_star_more"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="60dp"
            android:background="@drawable/gray_24_radius_bg"
            android:text="评星最多"
            android:textSize="12sp"
            android:textColor="#0D0D0D"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_star_less"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="60dp"
            android:background="@drawable/gray_24_radius_bg"
            android:text="评星最少"
            android:textSize="12sp"
            android:textColor="#0D0D0D"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ugc_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_ugc_comment_layout"
        app:spanCount="2"
        tools:itemCount="2"/>

</LinearLayout>
