<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/share_bottom"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/share_window_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享至"
                android:textSize="16sp"
                android:textColor="#0d0d0d"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_cancel_share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/black_close_2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp">
            <TextView
                android:id="@+id/tv_share_we_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_we_chat_icon"
                android:text="微信"
                android:textColor="#0d0d0d"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_share_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_circle_icon"
                android:text="朋友圈"
                android:textColor="#0d0d0d"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:drawablePadding="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f4f4f4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"/>
        <TextView
            android:id="@+id/tv_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#555555"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/show_img"
        android:layout_width="310dp"
        android:layout_height="526dp"
        app:layout_constraintBottom_toTopOf="@id/share_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
