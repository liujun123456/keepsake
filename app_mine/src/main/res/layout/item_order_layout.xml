<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="#ffffff">
    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号：23208309203902923"
        android:textColor="#999999"
        android:textSize="14sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="18dp">
        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/default_icon"/>
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Dimi Chaussettes Galerie GROW设计款中筒袜"
            android:layout_toRightOf="@id/iv_product_img"
            android:layout_marginLeft="14dp"
            android:textSize="14sp"
            android:textColor="#0d0d0d"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_toRightOf="@id/iv_product_img"
            android:layout_marginLeft="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="10sp"
                android:textColor="#0d0d0d"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="399.23"
                android:textColor="#0d0d0d"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product_img"
            android:layout_marginLeft="14dp"
            android:layout_above="@id/ll_price"
            android:layout_marginBottom="6dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选择：红色，大"
                android:textSize="12sp"
                android:textColor="#999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品，合计"
            android:textColor="#0d0d0d"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="10sp"
            android:textColor="#0d0d0d"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="399.23"
            android:textColor="#0d0d0d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="2020/11/11  14:41"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/to_evaluate"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:text="评价"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="#0D0D0D"
            android:background="@drawable/gray_empty_radius_2"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:text="去京东看看"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@id/to_evaluate"
            android:layout_marginRight="20dp"
            android:background="@drawable/black_radius_2_bg"/>

    </RelativeLayout>

</LinearLayout>
