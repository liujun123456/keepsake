<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_shoes"
            android:layout_width="306dp"
            android:layout_height="174dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/bg_shoes_login"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_package"
            android:layout_width="286dp"
            android:layout_height="276dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/bg_package_login"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_login_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="148dp"
        android:src="@mipmap/app_login_icon2" />

    <RelativeLayout
        android:id="@+id/rl_input_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/iv_login_icon"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:src="@mipmap/phone_icon"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="37dp"
            android:gravity="center_vertical"
            android:hint="请输入您的手机号"
            android:textColorHint="#b5b5b5"
            android:textSize="16sp"
            android:maxLength="11"
            android:textStyle="bold"
            android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b5b5b5"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_verify_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/rl_input_phone"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:src="@mipmap/verify_icon"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_verify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="37dp"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textStyle="bold"
            android:textColorHint="#b5b5b5"
            android:textSize="16sp"
            android:maxLength="11"
            android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b5b5b5"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="90dp"/>

        <TextView
            android:id="@+id/tv_get_verify"
            android:layout_width="83dp"
            android:layout_height="32dp"
            android:text="获取验证码"
            android:gravity="center"
            android:onClick="getVerifyCode"
            android:background="@drawable/gray_empty_radius_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_verify_code"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:onClick="doLogin"
        android:background="@drawable/black_radius_24"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:id="@+id/ll_login_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_do_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textSize="13sp"
            android:drawableLeft="@mipmap/login_un_agree"
            android:drawablePadding="8dp"
            android:textColor="#60000000"/>
        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textSize="13sp"
            android:textColor="#191919"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textSize="13sp"
            android:textColor="#60000000"/>
        <TextView
            android:id="@+id/tv_privacy_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textSize="13sp"
            android:textColor="#191919"
            android:textStyle="bold"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="微信登录"
        android:drawableLeft="@mipmap/wechat_login_icon"
        android:textStyle="bold"
        android:drawablePadding="4dp"
        android:onClick="doWeChatLogin"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/ll_login_notice"/>

</androidx.constraintlayout.widget.ConstraintLayout>
