<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="32dp"
    android:paddingRight="24dp">
    <RelativeLayout
        android:id="@+id/rl_label_icon"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="@drawable/shop_un_select_bg">
        <ImageView
            android:id="@+id/iv_show_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_radius_24"
            android:padding="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/token_label_icon"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_label_icon"
        android:text="潮玩主理人"
        android:textColor="#191919"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"/>

    <CheckBox
        android:id="@+id/cb_box"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@null"
        android:checked="true"
        android:background="@drawable/black_check_box_bg"/>

</RelativeLayout>
