<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout">

    <LinearLayout
        android:id="@+id/ll_shop_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_signboard"
        android:layout_width="128dp"
        android:layout_height="236dp"
        android:background="@mipmap/image_sign_1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/sign_title_margin"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="16dp">
        <com.stx.xhb.androidx.XBanner
            android:id="@+id/x_banner"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:pointsVisibility="false"
            app:pageChangeDuration="800"
            app:AutoPlayTime="3000"
            app:isAutoPlay="true"/>
        <TextView
            android:id="@+id/tv_ugc_title"
            android:layout_width="96dp"
            android:layout_height="24dp"
            android:background="@drawable/white_16_radius"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#191919"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"/>


    </LinearLayout>
    <!--title-->
    <LinearLayout
        android:id="@+id/ll_shop_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height2"
        android:background="@drawable/shop_title_bg"
        android:paddingTop="@dimen/title_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/white_arrow_left" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="某人的信物集"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:ellipsize="end"
                android:maxLines="1"/>


            <ImageView
                android:id="@+id/iv_go_edit_shop"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/edit_shop_icon" />

        </RelativeLayout>
    </LinearLayout>

    <!--整体手势布局-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_shop_title">

        <!--主体内容区域-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="573dp"
            android:orientation="vertical"
            android:gravity="bottom">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="32dp"
                android:paddingLeft="24dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rl_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_feed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/iv_feed"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/image_feed"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投喂"
                            android:textSize="13sp"
                            android:textColor="#ffffff"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/feed_msg_count"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/mine_red_oval_bg"
                        android:gravity="center"
                        android:text="28"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:visibility="invisible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl_feed"
                    android:layout_marginLeft="24dp">
                    <LinearLayout
                        android:id="@+id/ll_left_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/image_left_messages"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="留言板"
                            android:textSize="13sp"
                            android:textColor="#ffffff"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/leave_msg_count"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/mine_red_oval_bg"
                        android:gravity="center"
                        android:text="28"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:visibility="invisible"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp">
                    <LinearLayout
                        android:id="@+id/ll_avatar"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/avatar_ring_white_bg"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/star_ring_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_avatar"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:text="Token星球"
                        android:textSize="13sp"
                        android:textColor="#ffffff"/>
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fun_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/shop_goods_bg"
            android:orientation="vertical"
            app:layout_behavior="com.shunlai.mine.utils.ShopDetailBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <!--固定区域-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="橱窗"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="24dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp">
                        <TextView
                            android:id="@+id/tv_tuijian"
                            android:layout_width="76dp"
                            android:layout_height="32dp"
                            android:background="@drawable/pink_radius_16"
                            android:gravity="center"
                            android:text="推荐"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/tv_bilei"
                            android:layout_width="76dp"
                            android:layout_height="32dp"
                            android:background="@drawable/alpha_0d_radius16_bg"
                            android:gravity="center"
                            android:text="避雷"
                            android:textSize="13sp"
                            android:textColor="#191919"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--滑动depend区域-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_mine_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <!--键盘输出透明遮盖-->
    <View
        android:id="@+id/v_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4d000000"
        android:visibility="gone"/>

    <!--留言输入布局-->
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/white_top_radius_15"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺印象"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:animateLayoutChanges="true">
            <EditText
                android:id="@+id/et_msg_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/im_gray_radius_24_bg"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#191919"
                android:textSize="14sp"
                android:hint="写下你对Ta店铺的印象吧"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ll_input"/>

            <LinearLayout
                android:id="@+id/ll_input"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical|right"
                android:animateLayoutChanges="true">
                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="64dp"
                    android:layout_height="40dp"
                    android:background="@drawable/im_black_radius_24_bg"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</RelativeLayout>
