<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:orientation="horizontal"
        android:paddingLeft="44dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_un_choose"
                android:layout_width="80dp"
                android:layout_height="104dp"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/iv_d_p_un_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/empty_diao_pai"
                    android:layout_margin="4dp"/>
                <View
                    android:id="@+id/v_un_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shop_un_select_bg"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_un_choose_label"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/shop_selected_icon"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="不使用"
                android:textColor="#80000000"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_choose"
                android:layout_width="80dp"
                android:layout_height="104dp"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/iv_d_p_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/diao_pai_icon"
                    android:layout_margin="4dp"/>

                <View
                    android:id="@+id/v_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shop_select_bg"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_choose_label"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/shop_selected_icon" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="招牌"
                android:textColor="#80000000"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set_d_P"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#44000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="设置招牌"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
