<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/huati_item_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:background="@drawable/white_radius_12_bg">
        <com.shunlai.ui.UnderlineTextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_24"
            android:textSize="@dimen/sp_15"
            app:underline_color="#332EE6D6"
            app:underline_height="@dimen/dp_8">
        </com.shunlai.ui.UnderlineTextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">
            <com.shunlai.pk.view.SDPKDefenseSitLayout
                android:id="@+id/sit_red_layout"
                android:layout_width="@dimen/dp_152"
                android:layout_height="@dimen/dp_96"
                app:sit_for="2">
            </com.shunlai.pk.view.SDPKDefenseSitLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </Space>
            <com.shunlai.pk.view.SDPKDefenseSitLayout
                android:id="@+id/sit_blue_layout"
                android:layout_width="@dimen/dp_152"
                android:layout_height="@dimen/dp_96"
                app:sit_for="1">
            </com.shunlai.pk.view.SDPKDefenseSitLayout>
        </LinearLayout>
        <include layout="@layout/layout_debate_judgment_layout"
            android:id="@+id/can_debate_layout"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </include>
        <RelativeLayout
            android:id="@+id/see_other_say_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/arrow_right_gray"
                android:drawablePadding="8dp"
                android:text="@string/other_say_str"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/show_more_join_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_16">
            <RelativeLayout
                android:id="@+id/had_join_member_avatar_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_had_join_member_la"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/arrow_right_gray"
                android:drawablePadding="8dp"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="@string/had_join_member_str"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>
        <com.shunlai.pk.view.SDPKSitResultLayout
            android:id="@+id/pk_result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/dp_16">
        </com.shunlai.pk.view.SDPKSitResultLayout>
    </LinearLayout>
</RelativeLayout>