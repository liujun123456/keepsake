<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/huati_main_layout"
    android:layout_marginBottom="@dimen/dp_24">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_od"
            android:textStyle="bold"
            android:text="PK">
        </TextView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Space>
        <TextView
            android:id="@+id/tv_more_hua_ti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:drawablePadding="8dp"
            android:text="更多"
            android:textColor="#66000000"
            android:textSize="14sp" />
    </LinearLayout>

    <include layout="@layout/layout_item_pk"
        android:id="@+id/include_item_pk_layout"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </include>
    <include layout="@layout/layout_good_item_pk"
        android:id="@+id/include_good_pk"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>

</LinearLayout>