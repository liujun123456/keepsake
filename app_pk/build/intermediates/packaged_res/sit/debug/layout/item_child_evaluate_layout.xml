<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/user_default_icon"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="害怕猫叫"
            android:textSize="13sp"
            android:textColor="#0d0d0d"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tv_hui_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_user_name"
            android:drawableLeft="@mipmap/sanjiao_right"
            android:text="夹子是锦鲤"
            android:textSize="13sp"
            android:textColor="#0d0d0d"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_below="@id/tv_user_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:textColor="#666666"
            android:textSize="13sp"
            android:text="人成长的过程很多时候是痛苦的。很多有价值的信息，要接受起来也不易。"/>
        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentRight="true"
            android:text="3"
            android:drawableTop="@mipmap/like_icon_style_one"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="2 小时前"
            android:textColor="#999999"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_more_evaluate"
            android:layout_width="134dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@id/iv_user_avatar"
            android:layout_below="@id/tv_time"
            android:background="@drawable/evaluate_more_bg"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="#0d0d0d"
            android:textStyle="bold"
            android:text="查看全部9条回复"/>
    </RelativeLayout>

</LinearLayout>
