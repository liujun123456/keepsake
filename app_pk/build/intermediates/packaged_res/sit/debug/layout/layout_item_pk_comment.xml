<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/rl_sit_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pk_comment_red_sit_border">
        <LinearLayout
            android:id="@+id/ll_sit_content_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_pk_comment_sit"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_commnet_avatar"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/user_default_icon">
                </ImageView>
                <TextView
                    android:id="@+id/tv_comment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:lines="1"
                    android:textColor="@color/color_black_90"
                    android:textSize="@dimen/sp_13">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_commnet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:textColor="@color/color_black_90"
                android:lineHeight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/sp_15">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/ll_like_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_like_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ico_papa_unselected">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_90"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="0"
                        android:textSize="@dimen/sp_12">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_comment_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ico_message_count">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_90"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="0"
                        android:textSize="@dimen/sp_12">
                    </TextView>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </Space>
                <LinearLayout
                    android:id="@+id/ll_shared_bt"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ico_grad_shared"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_shared_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_90"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="@string/sit_shared_str"
                        android:visibility="gone"
                        android:textSize="@dimen/sp_12">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>