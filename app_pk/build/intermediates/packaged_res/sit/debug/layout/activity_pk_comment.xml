<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    tools:context=".SDPkCommentActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/comment_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@android:color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_8">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_16"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/dp_24"
                        android:orientation="vertical">
                        <com.shunlai.ui.UnderlineTextView
                            android:id="@+id/ul_title_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_24"
                            android:textSize="@dimen/sp_18"
                            app:underline_color="#332EE6D6"
                            app:underline_height="@dimen/dp_8">
                        </com.shunlai.ui.UnderlineTextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_80"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/iv_sit_comment_avatar"
                                android:layout_width="@dimen/dp_48"
                                android:layout_height="@dimen/dp_48">
                            </ImageView>
                            <LinearLayout
                                android:id="@+id/ll_nicname_info_bt"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_48"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/dp_12">
                                <TextView
                                    android:id="@+id/tv_sit_comment_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_black_90"
                                    android:textSize="@dimen/sp_14">
                                </TextView>
                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                </Space>
                                <TextView
                                    android:id="@+id/tv_sit_comment_degan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/color_black_40">
                                </TextView>
                            </LinearLayout>
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                            </Space>
                            <RelativeLayout
                                android:id="@+id/rl_follow_bt"
                                android:layout_width="@dimen/dp_72"
                                android:layout_height="@dimen/dp_32"
                                android:background="@drawable/bg_gray_radius_24_layout">
                                <TextView
                                    android:id="@+id/tv_follow_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:drawableLeft="@mipmap/ico_follow"
                                    android:drawablePadding="@dimen/dp_4"
                                    android:text="@string/follow_str">
                                </TextView>
                            </RelativeLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_sit_commnet_conent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_black_90"
                            android:singleLine="false"
                            android:scrollHorizontally="false"
                            android:scrollbars="vertical">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_sit_comment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginTop="@dimen/dp_16"
                            android:textColor="#999999">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">
                <TextView
                    android:id="@+id/tv_total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_90"
                    android:text="@string/commnet_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18">
                </TextView>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/comnnet_root_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_behavior="com.shunlai.pk.behavior.ConstrainedScrollBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commnet_list_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="72dp"
            android:text="说点什么…"
            android:textColor="#B2B2B2"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/comment_input_bg"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ico_papa_unselected"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#191919"
            android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#F2F2F2"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#88000000"
        android:orientation="vertical"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:background="@color/chat_white"
            android:paddingRight="16dp">
            <EditText
                android:id="@+id/et_msg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/comment_input_bg"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_send"
                android:layout_width="45dp"
                android:layout_height="28dp"
                android:background="@drawable/black_radius_2_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="发送"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>


