<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/login_main_color">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_16">
        <TextView
            android:id="@+id/tv_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:text="@string/toking_str"
            android:textColor="@color/code_text_color">
        </TextView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Space>
        <com.shunlai.ui.SDFilterSwitchButton
            android:id="@+id/sb_filter_switch_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.shunlai.ui.SDFilterSwitchButton>
    </LinearLayout>

    <com.shunlai.ui.srecyclerview.SRecyclerView
        android:id="@+id/list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:head_height="@dimen/dp_64">
    </com.shunlai.ui.srecyclerview.SRecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:visibility="gone"
        android:id="@+id/emply_layout">
        <TextView
            android:id="@+id/tv_emplay_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#B2B2B2"
            android:textSize="@dimen/sp_16"
            android:text="@string/pk_huti_not_my_str">
        </TextView>
    </RelativeLayout>
</LinearLayout>