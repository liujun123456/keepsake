<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/black_08_radius_8_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_recommend_sort_lt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:textStyle="bold"
            android:textColor="@color/code_selected_color"
            android:textSize="@dimen/sp_16"
            android:text="@string/wu_str"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:lineHeight="@dimen/dp_16">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="@color/code_selected_color"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:text="@string/tuijianfen"
            android:lineHeight="@dimen/dp_16">
        </TextView>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </Space>
    <LinearLayout
        android:id="@+id/ll_position_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_66_color"
            android:text="@string/not_tuijian_str">
        </TextView>
        <LinearLayout
            android:id="@+id/ll_avatart_postion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_8"
            android:layoutDirection="rtl"
            android:gravity="right">
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_next_bt"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/ico_next"
            android:layout_marginLeft="@dimen/dp_3">
        </ImageView>
    </LinearLayout>
</LinearLayout>