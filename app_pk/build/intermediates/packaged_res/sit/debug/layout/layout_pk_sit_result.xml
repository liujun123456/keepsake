<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/sit_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sit_red_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="2dp"
                android:textStyle="bold"
                android:textColor="@color/color_sit_red"
                android:textSize="@dimen/sp_12" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Space>
            <TextView
                android:id="@+id/sit_blue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="2dp"
                android:textColor="@color/color_sit_blue"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_16">
                <TextView
                    android:id="@+id/sit_result_red_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_sit_red"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_sit_result_action"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"
                android:layout_weight="1"
                android:clipChildren="false">
                <RelativeLayout
                    android:id="@+id/sit_result_red_view"
                    android:layout_width="14dp"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/result_sit_red_true_bg">
                </RelativeLayout>
                <ImageView
                    android:id="@+id/true_center_sit_iv"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/ico_true_center_sit">
                </ImageView>
                <RelativeLayout
                    android:id="@+id/sit_result_blue_view"
                    android:layout_width="14dp"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/result_sit_blue_true_bg">
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_16">
                <TextView
                    android:id="@+id/sit_result_blue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_sit_blue"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/show_more_join_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_16">
        <RelativeLayout
            android:id="@+id/had_join_member_avatar_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_had_join_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:drawablePadding="8dp"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="@string/had_join_member_str"
            android:textColor="#66000000"
            android:textSize="14sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/input_result_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/layout_input_radius_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_input">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="@string/default_input_str"
            android:textColor="@color/color_black_30">
        </TextView>
    </LinearLayout>
</LinearLayout>