<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SDPKSharedActivity">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:id="@+id/layout_ugc_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_ugc_shared_alpha_bg">
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/share_title_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/iv_share_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/share_app_icon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_share_name"
                    android:layout_toRightOf="@id/iv_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="透壳 App"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_below="@id/tv_share_name"
                    android:layout_toRightOf="@id/iv_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有推荐 就有避雷"
                    android:textColor="#A6FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/share_center_layout"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"
                android:orientation="vertical"
                android:background="@drawable/white_16_radius">
                <RelativeLayout
                    android:layout_width="280dp"
                    android:layout_height="136dp"
                    android:background="@drawable/share_img_bg">
                    <ImageView
                        android:id="@+id/iv_share_img"
                        android:layout_width="279dp"
                        android:layout_height="136dp"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:id="@+id/shared_video_content_bg"
                        android:layout_width="280dp"
                        android:layout_height="136dp"
                        android:background="@drawable/share_video_center_bg">
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_share_title">
                    </TextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_user_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/user_default_icon"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#e6000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_user_selected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/color_black_40">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ugc_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#99000000"
                    android:textSize="13sp"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="84dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/white_radius4_bg"
                android:padding="@dimen/DIMEN_4dp">
                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫码发现有趣的生活"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFFFF"/>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/tv_share_we_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_we_chat_icon"
                android:text="微信好友"
                android:textColor="#66000000"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginLeft="24dp"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/tv_share_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_circle_icon"
                android:text="朋友圈"
                android:textColor="#66000000"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginLeft="32dp"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tv_save_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/save_local_icon"
                android:text="存到手机"
                android:textColor="#66000000"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginLeft="32dp"
                android:drawablePadding="8dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#fff2f2f2"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tv_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textSize="15sp"
            android:textColor="#99000000"/>

    </LinearLayout>
</RelativeLayout>