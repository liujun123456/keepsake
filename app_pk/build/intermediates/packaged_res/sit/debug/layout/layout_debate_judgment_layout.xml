<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sit_judgment_red_bt"
        android:layout_width="@dimen/dp_152"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/judgment_debate_red_bt_bg">
        <TextView
            android:id="@+id/sit_judgment_red_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_sit_red_judgment"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_13">
        </TextView>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </Space>
    <RelativeLayout
        android:id="@+id/sit_judgment_blue_bt"
        android:layout_width="@dimen/dp_152"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/judgment_debate_blue_bt_bg">
        <TextView
            android:id="@+id/sit_judgment_blue_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_sit_red_judgment"
            android:textStyle="bold"
            android:textSize="@dimen/sp_13">
        </TextView>
    </RelativeLayout>
</LinearLayout>