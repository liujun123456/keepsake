<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/message_white"
    android:id="@+id/main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".attention.AttentionActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:paddingTop="@dimen/title_padding">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@mipmap/arrow_left_back"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#0d0d0d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:text=""/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cl_title">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:elevation="0dp"
            android:background="@color/message_white">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:textSize="32sp"
                app:layout_scrollFlags="scroll"
                android:text="@string/comment_title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_scrollFlags="scroll"/>
        </com.google.android.material.appbar.AppBarLayout>
        <com.shunlai.ui.srecyclerview.SRecyclerView
            android:id="@+id/rv_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:canRefresh="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/v_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4d000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/chat_white"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#F2F2F2"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/et_msg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/gray_radius_24_bg"
                android:layout_marginRight="136dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#191919"
                android:textSize="14sp"
                android:scrollbars="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/ll_emoji_send"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical|right"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                >
                <ImageView
                    android:id="@+id/iv_show_emoji"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/emoji_icon"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toLeftOf="@id/tv_send"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="64dp"
                    android:layout_height="40dp"
                    android:background="@drawable/black_radius_24_bg"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/emoji_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#f4f4f4"
            android:orientation="vertical"
            android:visibility="gone">
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
