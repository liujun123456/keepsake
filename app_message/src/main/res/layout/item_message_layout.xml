<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:id="@+id/ll_msg_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_msg_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/system_message_icon"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="16dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_oval_bg"
            android:gravity="center"
            android:text="9"
            android:textSize="10sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="4dp"
            android:visibility="visible"
            android:textColor="@color/message_white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_msg_image"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赫恩旗舰店"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/09 17:23"
                android:layout_alignParentRight="true"
                android:textColor="#BFBFBF"
                android:textSize="12sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这件外套确实非常适合你，你穿起卡肯定非常好看！"
            android:textSize="13sp"
            android:textColor="#999999"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#1a000000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
