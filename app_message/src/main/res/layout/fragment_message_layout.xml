<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".main.MessageFragment"
    android:background="#ffffff"
    android:paddingTop="@dimen/title_height">
    <TextView
        android:id="@+id/tv_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_title"
        android:textColor="#0D0D0D"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/fun_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fun_add_attention"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="54dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/fun_collect_icon"/>
                <TextView
                    android:id="@+id/tv_collect_count"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_oval_bg"
                    android:gravity="center"
                    android:text="28"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/message_white"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:text="赞和收藏"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun_add_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintLeft_toRightOf="@id/fun_collect"
            app:layout_constraintRight_toLeftOf="@id/fun_eva"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="54dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/fun_add_attention_icon"/>
                <TextView
                    android:id="@+id/tv_attention_count"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_oval_bg"
                    android:gravity="center"
                    android:text="28"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/message_white"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:text="新增关注"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun_eva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintLeft_toRightOf="@id/fun_add_attention"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="54dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/fun_eva_icon"/>
                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_oval_bg"
                    android:gravity="center"
                    android:text="28"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:textColor="@color/message_white"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:text="评论和回复"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f2f2f2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            app:elevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                app:layout_scrollFlags="scroll"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_sys_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:id="@+id/ll_sys_msg"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/system_message_icon"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_sys_count"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:minWidth="16dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/red_oval_bg"
                            android:gravity="center"
                            android:text="9"
                            android:textSize="10sp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginTop="4dp"
                            android:visibility="visible"
                            android:textColor="@color/message_white"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_sys_msg"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_sys_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="系统通知"
                                android:textStyle="bold"
                                android:textColor="@color/main_color"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tv_sys_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12/09 17:23"
                                android:layout_alignParentRight="true"
                                android:textColor="#BFBFBF"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_sys_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="这件外套确实非常适合你，你穿起卡肯定非常好看！"
                            android:textSize="13sp"
                            android:textColor="#999999"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#1a000000"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_push_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:id="@+id/ll_push_msg"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/push_message_icon"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_push_count"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:minWidth="16dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/red_oval_bg"
                            android:gravity="center"
                            android:text="9"
                            android:textSize="10sp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginTop="4dp"
                            android:visibility="visible"
                            android:textColor="@color/message_white"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ll_push_msg"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_push_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="推送通知"
                                android:textStyle="bold"
                                android:textColor="@color/main_color"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tv_push_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12/09 17:23"
                                android:layout_alignParentRight="true"
                                android:textColor="#BFBFBF"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_push_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="这件外套确实非常适合你，你穿起卡肯定非常好看！"
                            android:textSize="13sp"
                            android:textColor="#999999"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#1a000000"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>
            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
