<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <Button
        android:id="@+id/bt_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布笔记"/>

    <Button
        android:id="@+id/go_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消息页面"/>
    <Button
        android:id="@+id/go_complain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="投诉"/>

    <Button
        android:id="@+id/go_im"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="聊天"/>

    <Button
        android:id="@+id/go_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地址管理"/>

    <Button
        android:id="@+id/go_ugc_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询笔记"/>

    <Button
        android:id="@+id/go_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号管理"/>

</LinearLayout>
