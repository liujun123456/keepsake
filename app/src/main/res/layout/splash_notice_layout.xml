<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_16_radius"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingBottom="32dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用TOKEN APP"
        android:textColor="#0D0D0D"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_splash_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在你使用TOKEN APP前，请认真阅读并了解《用户协议》和《隐私政策》。点击同意即表示你已阅读并同意全部条款。"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:textColor="#66000000"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:background="@drawable/black_radius_24"
        android:text="同意"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/tv_un_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#66000000"
        android:text="不同意并退出"
        android:textSize="13sp"
        android:layout_marginTop="16dp"/>



</LinearLayout>