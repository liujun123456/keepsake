<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/title_padding"
        android:background="@color/login_main_color">
        <include layout="@layout/refresh_header_view"
            android:id="@+id/refreshHeaderLayout">
        </include>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/store_activity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">
            <com.shunlai.ui.srecyclerview.SRecyclerView
                android:id="@+id/ll_store_activity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:head_height="64dp">
            </com.shunlai.ui.srecyclerview.SRecyclerView>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/top_header_navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            app:layout_scrollFlags="scroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:background="@drawable/gray_radius_24_bg">
                    <ImageView
                        android:id="@+id/iv_search_icon"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:src="@mipmap/search_icon_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_toRightOf="@id/iv_search_icon"
                        android:text="搜索感兴趣的内容和用户"
                        android:textColor="#4D000000"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_shared_firend_bt"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/dialog_cancel_layout_bg">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ico_home_shared"></ImageView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/tab_store_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.shunlai.store.behavior.SDStoreContentBehavior">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/store_tab_ugc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:tabGravity="start"
                app:tabIndicator="@drawable/tab_indicator_bg"
                app:tabIndicatorColor="#FF2EE6D6"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="4dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#FF0D0D0D"
                app:tabTextAppearance="@style/TabLayoutStyle"
                app:tabTextColor="#99000000" />
            <RelativeLayout
                android:id="@+id/rl_tab_store_search"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:alpha="0"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:src="@mipmap/ico_home_search"></ImageView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@id/store_tab_ugc"
                android:paddingHorizontal="@dimen/dp_16"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/total_num_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/code_text_color"
                    android:textSize="@dimen/sp_14"
                    android:visibility="invisible"
                    android:textStyle="bold"></TextView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </Space>
                <com.shunlai.store.view.SDStoreGoodFilterTabView
                    android:id="@+id/store_filter_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32">
                </com.shunlai.store.view.SDStoreGoodFilterTabView>
            </LinearLayout>
        </RelativeLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>