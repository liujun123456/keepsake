<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_32"
    android:background="@drawable/black_08_radius_8_bg"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/dp_2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/filter_heat_bt"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_28"
        android:paddingHorizontal="@dimen/dp_8"
        android:textStyle="bold"
        android:textColor="@color/code_text_color"
        android:textSize="@dimen/sp_12"
        android:background="@drawable/layout_ff_radiu_8_bg"
        android:gravity="center"
        android:text="热度">
    </TextView>
    <TextView
        android:id="@+id/filter_score_bt"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_28"
        android:textStyle="bold"
        android:textColor="@color/code_text_color"
        android:textSize="@dimen/sp_12"
        android:paddingHorizontal="@dimen/dp_8"
        android:background="@drawable/layout_ff_radiu_8_bg"
        android:gravity="center"
        android:text="评分">
    </TextView>

</LinearLayout>