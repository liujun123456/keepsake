<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_16">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_144">
            <ImageView
                android:id="@+id/iv_good_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_black_66_to_black_0_and_bottom_radiu_12_layout">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_recommend_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_4"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/white_radius4_bg">
                <TextView
                    android:id="@+id/recommend_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/code_selected_color"
                    android:layout_centerInParent="true"
                    android:textStyle="bold">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">
            <TextView
                android:id="@+id/tv_good_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/dp_24"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/code_selected_color"
                android:textStyle="bold">
            </TextView>

            <RelativeLayout
                android:id="@+id/rl_store_type_layout"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/layout_29ccbe_radiu_4_bg">

                <TextView
                    android:id="@+id/tv_store_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/self_buy_str"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_had_discuss_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/dp_16"
            android:text="@string/friend_discuss_str"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/black_99_color"
            android:layout_marginTop="@dimen/dp_4">
        </TextView>
    </LinearLayout>
</RelativeLayout>