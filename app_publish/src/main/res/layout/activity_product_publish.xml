<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">
    <com.shunlai.ui.ListenerScrollView
        android:id="@+id/sl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="114dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/publish_title"
                android:textColor="#0D0D0D"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <com.shunlai.ui.EditTextWithScrollView
                android:id="@+id/et_ugc_content"
                android:layout_width="match_parent"
                android:minHeight="108dp"
                android:maxHeight="144dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="32dp"
                android:hint="@string/hint_content"
                android:gravity="top|left"
                android:textSize="15sp"
                android:maxLength="1000"
                android:textColorHint="#4D000000"
                android:inputType="textMultiLine"
                android:imeOptions="actionSend"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_content_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/1000"
                    android:textSize="12sp"
                    android:textColor="#4D000000"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#10000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_add_hua_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#添加话题"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:id="@+id/ll_hua_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/black_radius_12_bg"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_ht_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#漫画里最让人心旷神怡的角色"
                        android:textColor="@color/white" />
                    <RelativeLayout
                        android:id="@+id/ll_delete_ht"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">
                        <ImageView
                            android:id="@+id/iv_delete_ht"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/black_close"
                            android:background="@drawable/gray_oval_bg"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#10000000"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <com.shunlai.ui.EnlargedRecyclerView
                android:id="@+id/rv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                />
            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="16dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/ll_add_image"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:background="@drawable/gray_radius_16_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/plus_icon"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_show_img"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/iv_show_img"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        />
                    <RelativeLayout
                        android:id="@+id/ll_delete"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/oval_black_close"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            />

                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/iv_play_video"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@mipmap/video_play_icon"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_video_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#10000000"
                android:layout_marginTop="25dp"/>
            <com.shunlai.ui.EnlargedRecyclerView
                android:id="@+id/rv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="25dp"/>

        </LinearLayout>
    </com.shunlai.ui.ListenerScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_publish"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/black_radius_24_bg"
        android:text="发布笔记"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>
