<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gray_radius_4_bg"
    android:padding="12dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@mipmap/default_icon"/>
        <TextView
            android:id="@+id/tv_sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product_img"
            android:textColor="#0D0D0D"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="苹果2020款 air pro无线蓝牙耳机降噪处理，保证正品，反对非法的丰苹果2020款 air pro无线蓝牙耳机降噪处理，保证正品，反对非法的丰富"/>

        <LinearLayout
            android:id="@+id/ll_sign_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product_img"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0d0d0d"/>
            <TextView
                android:id="@+id/tv_sign_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,800"
                android:textSize="20sp"
                android:textColor="#0d0d0d"
                android:textStyle="bold"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        android:layout_marginTop="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center">
        <com.shunlai.ui.StarLayout
            android:id="@+id/star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:maxStar="5"
            app:star_height="27dp"
            app:star_width="27dp"
            app:chooseIcon="@mipmap/star_choose"
            app:unChooseIcon="@mipmap/star_un_choose"
            app:child_margin="12dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_star_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="你觉得几颗星？"
            android:textSize="16sp"
            android:textColor="#0D0D0D"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>
