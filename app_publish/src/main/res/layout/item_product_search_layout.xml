<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="16dp"
    android:paddingTop="24dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/default_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="BOSE 挂脖蓝牙无线音箱，精准定位，环绕立体声，打造私密个人音乐。独一无二的BOSE 挂脖蓝牙无线音箱，精准定位，环绕立体声，打造私密个人音乐。独一无二的"
        android:textColor="#191919"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_product_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="80dp"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:text="bose 官方旗舰店"
        android:textColor="#999999"
        android:textSize="11sp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/iv_product_img"
        app:layout_constraintTop_toBottomOf="@id/tv_product_desc" />

    <TextView
        android:id="@+id/tv_platform_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="京东价"
        android:textColor="#0d0d0d"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_product_img"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name" />

    <TextView
        android:id="@+id/tv_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_platform_price"
        app:layout_constraintLeft_toRightOf="@id/tv_platform_price"
        android:text="￥"
        android:textSize="11sp"
        android:textColor="#191919"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2600"
        android:textColor="#0d0d0d"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_price_label"
        app:layout_constraintLeft_toRightOf="@id/tv_price_label" />

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="64dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/gray_radius_24_bg"
            android:text="选 ta"
            android:textColor="#191919"
            android:gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_real_price" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#10000000"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
