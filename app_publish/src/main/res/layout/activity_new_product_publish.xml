<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height2"
        android:paddingTop="@dimen/title_padding">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="15sp"
                android:textColor="#FF0D0D0D"
                android:layout_centerVertical="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_publish"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="发布"
                android:textSize="13sp"
                android:textColor="#E6000000"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0.4"
                android:background="@drawable/photo_next_action_bg"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

    <com.shunlai.ui.ListenerScrollView
        android:id="@+id/sl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.shunlai.ui.EditTextWithScrollView
                android:id="@+id/et_ugc_content"
                android:layout_width="match_parent"
                android:minHeight="72dp"
                android:maxHeight="288dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="24dp"
                android:hint="@string/hint_content"
                android:gravity="top|left"
                android:textSize="15sp"
                android:textColorHint="#4D000000"
                android:inputType="textMultiLine"
                android:imeOptions="actionSend"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_content_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="-100"
                    android:visibility="invisible"
                    android:textColor="#FFF24B49"/>

            </LinearLayout>


            <com.shunlai.ui.EnlargedRecyclerView
                android:id="@+id/rv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:visibility="visible"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textColor="#99000000"
                android:textSize="13sp"
                android:text="💎 100字+5图/1视频很可能被编辑精选"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/jin_icon_2"/>

                <LinearLayout
                    android:id="@+id/ll_hua_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/black_radius_12_bg"
                    android:visibility="gone"
                    android:layout_marginLeft="12dp">
                    <TextView
                        android:id="@+id/tv_ht_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#漫画里最让人心旷神怡的角色"
                        android:textColor="@color/white" />
                    <RelativeLayout
                        android:id="@+id/ll_delete_ht"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">
                        <ImageView
                            android:id="@+id/iv_delete_ht"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/black_close"
                            android:background="@drawable/gray_oval_bg"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_un_choose_ht"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:id="@+id/tv_choose_ht"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/publish_right_arrow"
                        android:drawablePadding="8dp"
                        android:text="未选择话题"
                        android:textColor="#E6000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:background="#0D000000" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:scrollbars="none">
                        <LinearLayout
                            android:id="@+id/ll_ht_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>

                    </HorizontalScrollView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/product_icon_label"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#E6000000"
                    android:layout_marginLeft="12dp"
                    android:text="提到的好物"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="#66000000"/>
                <LinearLayout
                    android:id="@+id/ll_choose_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="16dp">
                    <TextView
                        android:id="@+id/tv_choose_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加商品 获得更多曝光"
                        android:textColor="#66000000"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:id="@+id/ll_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/publish_right_arrow"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </com.shunlai.ui.ListenerScrollView>


</LinearLayout>
