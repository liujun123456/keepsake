<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_mycoupon_item_bg_unuse"
    android:paddingTop="@dimen/d_order_my_pad_b"
    android:paddingRight="@dimen/d_order_my_pad_b"
    android:paddingLeft="@dimen/d_coupon_item_stroke"
    android:paddingBottom="@dimen/dp_16">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_l"
        android:layout_width="@dimen/d_coupon_price_w"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="@dimen/d_coupon_use_btn_mar_b">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_price_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_use">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_symbol_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/tv_price"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingBottom="@dimen/d_coupon_symbol_price_alignment"
                    android:text="@string/str_symbol"
                    android:textSize="@dimen/d_font_prompt"
                    android:textStyle="bold"
                    android:textColor="@color/c_order_price"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_symbol"
                    android:includeFontPadding="false"
                    tools:text="30123123132132132132123"
                    android:singleLine="true"
                    android:textSize="@dimen/d_font_mycoupon_price"
                    android:textStyle="bold"
                    android:textColor="@color/c_order_price"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_symbol_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/d_coupon_condition_mar_t"
                tools:text="满10.01可用电视机分厘卡的艰苦奋斗"
                android:singleLine="true"
                android:textSize="@dimen/d_font_prompt"
                android:textColor="@color/c_order_detail_des" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/btn_use"
            android:layout_width="@dimen/d_coupon_use_btn_w"
            android:layout_height="@dimen/d_coupon_use_btn_h"
            style="@style/tv_mycoupon_btn_white"
            android:background="@drawable/shape_order_btn_emphasize"
            android:gravity="center"
            android:text="@string/str_use"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_price_infos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/d_coupon_condition_mar_t"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/v_dividing"
        android:layout_width="@dimen/d_common_dividing_small"
        android:layout_height="@dimen/d_coupon_dividing_h"
        android:background="@color/c_order_btn_stroke"
        app:layout_constraintLeft_toRightOf="@id/cl_l"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="都是垃圾焚"
        style="@style/tv_order_btn_black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/v_dividing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="都是垃圾焚烧炉开发"
        style="@style/tv_order_sku_black"
        app:layout_constraintTop_toBottomOf="@id/tv_des"
        app:layout_constraintLeft_toLeftOf="@id/tv_des"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_use_des_line_1"
        android:layout_marginTop="@dimen/d_coupon_view_space"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_use_des_line_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_des"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/v_dividing"
        android:layout_marginTop="@dimen/d_coupon_view_space">
        <TextView
            android:id="@+id/tv_use_des_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:visibility="gone"
            tools:text="都是垃圾焚独立声卡JFK洛杉矶发的克里夫阿里山扩大飞机了看烧炉开发"
            style="@style/tv_coupon_use_des_gray"
            android:drawableRight="@drawable/selector_coupon_use_des_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawablePadding="@dimen/d_order_detail_dra_pad"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_use_des_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="都是垃圾焚sdalkjfksdff深大路口解放"
        style="@style/tv_coupon_use_des_gray"
        app:layout_constraintTop_toBottomOf="@id/cl_use_des_line_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_des"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>