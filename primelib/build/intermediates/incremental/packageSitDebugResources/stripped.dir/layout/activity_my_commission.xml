<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/c_order_divider"
    android:fitsSystemWindows="true"
    tools:context=".activitys.commissions.MyCommissionActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_order_appbar"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="center"
                app:collapsedTitleTextAppearance="@style/tv_title_black"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleGravity="bottom|center_horizontal"
                app:expandedTitleMarginBottom="@dimen/d_order_my_pad_b"
                app:expandedTitleTextAppearance="@style/tv_blod_key_black"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_common_title_h"
                    android:background="@android:color/transparent"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"></androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_order_detail_pay_h"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d_order_my_pad_b"
                android:paddingRight="@dimen/d_order_my_pad_b">
                <!--我的提现-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/shape_dialog_prompt_confrim">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_my_top"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_commission_my_h"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <com.android.library.YLCircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_commission_top_bg"
                            app:radiusYL="@dimen/d_order_my_pad_b"/>
                        <TextView
                            android:id="@+id/tv_my_withdrawal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_my_withdrawal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="@dimen/d_order_my_pad_b"
                            android:layout_marginLeft="@dimen/d_order_my_pad_b"
                            style="@style/tv_my_withdrawal_white"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_withdrawal_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_withdrawal_list"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:paddingTop="@dimen/d_order_my_pad_b"
                            android:paddingRight="@dimen/d_order_my_pad_b"
                            style="@style/tv_withdrawal_list_white"
                            android:drawableRight="@mipmap/ic_arrow_withdrawal_list"
                            android:drawablePadding="@dimen/d_dialog_address_result_dra_pad"/>
                        <TextView
                            android:id="@+id/btn_withdrawal"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/d_order_item_btn_h"
                            android:text="@string/str_withdrawal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:paddingLeft="@dimen/d_order_my_pad_b"
                            android:paddingRight="@dimen/d_order_my_pad_b"
                            style="@style/tv_order_btn_black"
                            android:gravity="center"
                            android:background="@drawable/shape_btn_withdrawal_bg"
                            android:layout_marginRight="@dimen/d_order_my_pad_b"
                            android:layout_marginBottom="@dimen/d_order_my_pad_b"/>
                        <TextView
                            android:id="@+id/tv_withdrawal_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_price"
                            app:layout_constraintBottom_toBottomOf="@id/btn_withdrawal"
                            app:layout_constraintLeft_toLeftOf="@id/tv_my_withdrawal"
                            app:layout_constraintRight_toLeftOf="@id/btn_withdrawal"
                            android:paddingRight="@dimen/d_coupon_view_space"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/d_font_myorder"
                            android:gravity="bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_withdrawable_commission"
                            app:layout_constraintBottom_toTopOf="@id/tv_withdrawal_num"
                            app:layout_constraintLeft_toLeftOf="@id/tv_my_withdrawal"
                            android:paddingRight="@dimen/d_coupon_view_space"
                            android:textColor="@color/c_withdrawable_commission"
                            android:textSize="@dimen/d_font_prompt"
                            android:gravity="bottom"
                            android:singleLine="true"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:id="@+id/ll_withdrawn_commission"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d_commission_my_num_h"
                        app:layout_constraintTop_toBottomOf="@id/cl_my_top"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/v_dividing_1"
                        app:layout_constraintHorizontal_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_withdrawn_commission"
                            style="@style/tv_commission_num_k"/>
                        <TextView
                            android:id="@+id/tv_withdrawn_commission_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_price"
                            style="@style/tv_address_detail_black"
                            android:gravity="bottom"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/v_dividing_1"
                        android:layout_width="@dimen/d_common_dividing"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:background="@color/c_order_detail_btn_dividing"
                        app:layout_constraintTop_toTopOf="@id/ll_withdrawn_commission"
                        app:layout_constraintBottom_toBottomOf="@id/ll_withdrawn_commission"
                        app:layout_constraintLeft_toRightOf="@id/ll_withdrawn_commission"
                        app:layout_constraintRight_toLeftOf="@id/ll_settled_commission"/>
                    <LinearLayout
                        android:id="@+id/ll_settled_commission"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d_commission_my_num_h"
                        app:layout_constraintTop_toBottomOf="@id/cl_my_top"
                        app:layout_constraintLeft_toRightOf="@id/v_dividing_1"
                        app:layout_constraintRight_toLeftOf="@id/v_dividing_2"
                        app:layout_constraintHorizontal_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_settled_commission"
                            style="@style/tv_commission_num_k"/>
                        <TextView
                            android:id="@+id/tv_settled_commission_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_price"
                            style="@style/tv_address_detail_black"
                            android:gravity="bottom"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/v_dividing_2"
                        android:layout_width="@dimen/d_common_dividing"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:background="@color/c_order_detail_btn_dividing"
                        app:layout_constraintTop_toTopOf="@id/ll_withdrawn_commission"
                        app:layout_constraintBottom_toBottomOf="@id/ll_withdrawn_commission"
                        app:layout_constraintLeft_toRightOf="@id/ll_settled_commission"
                        app:layout_constraintRight_toLeftOf="@id/ll_settled_commission_tobe"/>
                    <LinearLayout
                        android:id="@+id/ll_settled_commission_tobe"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d_commission_my_num_h"
                        app:layout_constraintTop_toBottomOf="@id/cl_my_top"
                        app:layout_constraintLeft_toRightOf="@id/v_dividing_2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_settled_commission_tobe"
                            style="@style/tv_commission_num_k"/>
                        <TextView
                            android:id="@+id/tv_settled_commission_tobe_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/order_price"
                            style="@style/tv_address_detail_black"
                            android:gravity="bottom"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--我的支付宝-->
                <LinearLayout
                    android:id="@+id/ll_my_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_invoice_address_result_h"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/cl_my"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/d_order_my_pad_b"
                    android:background="@drawable/shape_dialog_prompt_confrim"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/d_order_my_pad_b"
                    android:paddingRight="@dimen/d_order_my_pad_b">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/str_my_alipay"
                        style="@style/tv_order_price_black"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/ic_alipay_tv_dra"
                        android:drawablePadding="@dimen/d_coupon_view_space"/>
                    <TextView
                        android:id="@+id/btn_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:text="@string/str_binding"
                        android:background="@drawable/shape_order_btn_emphasize"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/d_order_my_pad_b"
                        android:paddingRight="@dimen/d_order_my_pad_b"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/d_font_price_total"/>
                    <TextView
                        android:id="@+id/tv_alipay_account"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        tools:text="@string/str_binding"
                        android:gravity="center_vertical"
                        style="@style/tv_order_price_black"
                        android:drawableRight="@mipmap/ic_arrow_right"
                        android:drawablePadding="@dimen/d_coupon_view_space"
                        android:singleLine="true" />
                </LinearLayout>
<!--                我的支付宝。我的淘宝-->
                <LinearLayout
                    android:id="@+id/bind_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cl_my"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/d_order_my_pad_b">
                    <LinearLayout
                        android:id="@+id/ll_zf_root"
                        android:layout_width="@dimen/t_dp_164"
                        android:layout_height="@dimen/t_dp_136"
                        android:orientation="vertical"
                        android:padding="@dimen/t_dp_16"
                        android:background="@drawable/white_only_16radius_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#E6000000"
                            android:textSize="@dimen/t_sp_16"
                            android:textStyle="bold"
                            android:text="我的支付宝">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_zf_bind_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/t_sp_13"
                            android:layout_marginTop="@dimen/t_dp_4"
                            android:text="请绑定提现账户">
                        </TextView>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        </Space>
                        <RelativeLayout
                            android:id="@+id/rl_not_bind_zf"
                            android:layout_width="@dimen/t_dp_111"
                            android:layout_height="@dimen/t_dp_32"
                            android:background="@drawable/layout_0d_24radiu_bg">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/t_sp_13"
                                android:drawableLeft="@mipmap/ico_zf_status_logo"
                                android:drawablePadding="@dimen/t_dp_4"
                                android:text="绑定支付宝">
                            </TextView>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_bind_zf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E6000000"
                            android:drawableLeft="@mipmap/ico_ali_logo"
                            android:drawablePadding="@dimen/t_dp_8"
                            android:text="*****"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t_sp_14">
                        </TextView>
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </Space>
                    <LinearLayout
                        android:id="@+id/ll_tb_root"
                        android:layout_width="@dimen/t_dp_164"
                        android:layout_height="@dimen/t_dp_136"
                        android:orientation="vertical"
                        android:padding="@dimen/t_dp_16"
                        android:background="@drawable/white_only_16radius_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#E6000000"
                            android:textSize="@dimen/t_sp_16"
                            android:textStyle="bold"
                            android:text="我的淘宝">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_tb_bind_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/t_sp_13"
                            android:layout_marginTop="@dimen/t_dp_4"
                            android:text="分享商品收获佣金">
                        </TextView>
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        </Space>
                        <RelativeLayout
                            android:id="@+id/rl_not_bind_tb"
                            android:layout_width="@dimen/t_dp_111"
                            android:layout_height="@dimen/t_dp_32"
                            android:background="@drawable/layout_0d_24radiu_bg">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/t_sp_13"
                                android:drawableLeft="@mipmap/ico_tb_status_logo"
                                android:drawablePadding="@dimen/t_dp_4"
                                android:text="绑定淘宝">
                            </TextView>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_bind_tb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E6000000"
                            android:drawableLeft="@mipmap/ico_tb_logo"
                            android:drawablePadding="@dimen/t_dp_8"
                            android:text="*****"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t_sp_14">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--订单列表-->
                <LinearLayout
                    android:id="@+id/ll_order_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_invoice_address_result_h"
                    app:layout_constraintTop_toBottomOf="@id/bind_info_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/d_order_my_pad_b"
                    android:background="@drawable/shape_dialog_prompt_confrim"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/d_order_my_pad_b"
                    android:paddingRight="@dimen/d_order_my_pad_b">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/str_order_list"
                        style="@style/tv_order_price_black"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/ic_commission_order_list"
                        android:drawablePadding="@dimen/d_coupon_view_space"/>

                    <TextView
                        android:id="@+id/tv_order_list_enter"
                        style="@style/tv_commission_num_k"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:drawableRight="@mipmap/ic_arrow_right"
                        android:drawablePadding="@dimen/d_coupon_view_space"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/str_shared_links_orders" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/ll_order_list"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/d_order_my_pad_b"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_after_sales_commission_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/d_order_my_pad_b"
                        android:paddingBottom="@dimen/d_order_my_pad_b"
                        android:text="@string/str_after_sales_commission_order"
                        android:drawableTop="@mipmap/ic_commission_after_sales_order"
                        android:drawablePadding="@dimen/d_order_detail_dra_pad"
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        style="@style/tv_order_detail_black"/>
                    <View
                        android:id="@+id/v_dividing_3"
                        android:layout_width="@dimen/d_common_dividing"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:visibility="gone"
                        android:background="@color/c_order_detail_btn_dividing" />
                    <TextView
                        android:id="@+id/tv_taobao_guide_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/d_order_my_pad_b"
                        android:paddingBottom="@dimen/d_order_my_pad_b"
                        android:text="@string/str_taobao_guide_order"
                        android:drawableTop="@mipmap/ic_commission_taobao_order"
                        android:drawablePadding="@dimen/d_order_detail_dra_pad"
                        android:gravity="center_horizontal"
                        style="@style/tv_order_detail_black"/>
                    <View
                        android:id="@+id/v_dividing_4"
                        android:layout_width="@dimen/d_common_dividing"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:visibility="gone"
                        android:background="@color/c_order_detail_btn_dividing" />
                    <TextView
                        android:id="@+id/tv_contact_customer_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/d_order_my_pad_b"
                        android:paddingBottom="@dimen/d_order_my_pad_b"
                        android:text="@string/str_contact_customer_service"
                        android:visibility="invisible"
                        android:drawableTop="@mipmap/ic_commission_contact_customer_service"
                        android:drawablePadding="@dimen/d_order_detail_dra_pad"
                        android:gravity="center_horizontal"
                        style="@style/tv_order_detail_black"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/include_common_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>