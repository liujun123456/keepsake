<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.android.library.YLCircleImageView
        android:id="@+id/ylciv"
        android:layout_width="@dimen/d_order_detail_img_w"
        android:layout_height="@dimen/d_order_detail_img_w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_title_goods"
        app:radiusYL="@dimen/d_order_detail_img_radius"
        app:borderWidthYL="@dimen/d_common_dividing"
        app:borderColorYL="@color/c_order_img_stroke"
        android:layout_marginBottom="@dimen/d_order_detail_img_mar_b"/>
    <TextView
        android:id="@+id/tv_title_goods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ylciv"
        app:layout_constraintLeft_toRightOf="@id/ylciv"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="上课的附近上空的飞机喀什地方艰苦地方sdfjkf的时刻JFK地方"
        android:lines="2"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        style="@style/tv_order_title_black"/>
    <TextView
        android:id="@+id/tv_sku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_goods"
        app:layout_constraintLeft_toLeftOf="@id/tv_title_goods"
        app:layout_constraintRight_toLeftOf="@id/tv_count"
        tools:text="上岛咖啡是否|是两拉节分厘卡"
        style="@style/tv_order_sku_black"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_sku"
        app:layout_constraintLeft_toRightOf="@id/tv_sku"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/order_count_one"
        style="@style/tv_order_sku_black"/>
    <TextView
        android:id="@+id/tv_include_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@id/ylciv"
        app:layout_constraintTop_toBottomOf="@id/tv_sku"
        app:layout_constraintLeft_toLeftOf="@id/tv_title_goods"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/view_logistics"
        style="@style/tv_order_price_black"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>