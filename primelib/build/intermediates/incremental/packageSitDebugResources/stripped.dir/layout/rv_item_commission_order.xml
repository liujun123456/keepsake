<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/d_order_my_pad_b"
    android:paddingRight="@dimen/d_order_my_pad_b"
    android:paddingTop="@dimen/d_order_item_pad_t"
    android:paddingBottom="@dimen/d_order_item_pad_t"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="斯大林附件是的"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_order_time"
                android:textColor="@color/c_taobao_guide_order_store"
                android:textSize="@dimen/d_font_sku"/>
            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="斯大林附件是的"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_store_name"
                android:textColor="@color/c_taobao_guide_order_store"
                android:textSize="@dimen/d_font_sku"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:visibility="visible">
            <TextView
                android:id="@+id/tv_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_code_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_code"
                style="@style/tv_prompt_black"/>
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="上了看见分厘卡士大夫阿里山扩大飞机了开始打飞机阿斯利康大家分厘卡"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_code_title"
                app:layout_constraintRight_toLeftOf="@id/tv_status"
                style="@style/tv_prompt_black"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/order_code_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_code"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/tv_order_btn_black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rl_top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_order_item_pad_t">
        <include
            layout="@layout/include_goods_des_single"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_total_price_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_earn_money_v"
        app:layout_constraintBottom_toBottomOf="@id/tv_earn_money_v"
        app:layout_constraintRight_toLeftOf="@id/tv_total_price_v"
        android:text="@string/str_total"
        style="@style/tv_commission_num_k" />
    <TextView
        android:id="@+id/tv_total_price_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_earn_money_v"
        app:layout_constraintBottom_toBottomOf="@id/tv_earn_money_v"
        app:layout_constraintRight_toLeftOf="@id/tv_earn_money_k"
        tools:text="@string/order_count_total"
        style="@style/tv_order_detail_des_gray"/>
    <TextView
        android:id="@+id/tv_earn_money_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_earn_money_v"
        app:layout_constraintBottom_toBottomOf="@id/tv_earn_money_v"
        app:layout_constraintRight_toLeftOf="@id/tv_earn_money_v"
        android:text="@string/str_earn"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        style="@style/tv_order_count_total_black"/>
    <TextView
        android:id="@+id/tv_earn_money_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_goods"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/order_price"
        style="@style/tv_order_price_black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/d_order_tab_indicator_w"/>
    <RelativeLayout
        android:id="@+id/rl_push_note"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/tv_earn_money_v"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/dialog_black_24_radiu_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_white_ff_"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="@string/publish_notes">
        </TextView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>