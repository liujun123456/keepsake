<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_common_title_h"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rl_title_l"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/d_common_title_h"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="@string/str_commission_flow"
            android:textStyle="bold"
            style="@style/tv_after_sale_edit"
            android:paddingLeft="@dimen/d_order_my_pad_b"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="@dimen/d_common_title_h"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow_left_back"
            android:scaleType="centerInside"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/order_my"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rl_title_l"
        app:layout_constraintRight_toLeftOf="@id/rl_title_r"
        android:gravity="center"
        style="@style/tv_title_black"/>

    <RelativeLayout
        android:id="@+id/rl_title_r"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/d_common_title_h"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="@string/str_commission_flow"
            android:textStyle="bold"
            style="@style/tv_after_sale_edit"
            android:paddingRight="@dimen/d_order_my_pad_b"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="@dimen/d_common_title_h"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/ic_customer_service"
            android:scaleType="centerInside"
            android:visibility="invisible"
            tools:visibility="visible"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>