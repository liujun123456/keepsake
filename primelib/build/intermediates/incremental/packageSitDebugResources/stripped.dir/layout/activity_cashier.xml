<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_need_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_need_pay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        android:layout_marginTop="@dimen/d_pay_need_mar_t"
        style="@style/tv_pay_need"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_price"
        app:layout_constraintTop_toBottomOf="@id/tv_need_pay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingRight="@dimen/d_order_my_pad_b"
        android:textSize="@dimen/d_font_myorder"
        android:textStyle="bold"
        android:textColor="@color/c_order_price"
        android:layout_marginTop="@dimen/d_coupon_view_space"/>
    <TextView
        android:id="@+id/tv_pay_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_pay_count_down"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        android:layout_marginTop="@dimen/d_pay_need_mar_t"
        style="@style/tv_commission_num_k"/>
    <TextView
        android:id="@+id/tv_select_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_select_payment_method"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pay_count_down"
        android:layout_marginTop="@dimen/d_select_payment_method_mar_t"
        style="@style/tv_pay_need"/>
    <TextView
        android:id="@+id/tv_alipy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_select_payment_method_item_h"
        android:text="@string/str_alipay"
        style="@style/tv_order_detail_status_black"
        app:layout_constraintTop_toBottomOf="@id/tv_select_payment_method"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_coupon_view_space"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_order_item_pad_t"
        android:paddingRight="@dimen/d_order_item_pad_t"
        android:drawableLeft="@mipmap/ic_pay_alipay"
        android:drawableRight="@drawable/selector_pay_type"
        android:drawablePadding="@dimen/d_order_my_pad_b"/>

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_select_payment_method_item_h"
        android:text="@string/str_wechat_pay"
        style="@style/tv_order_detail_status_black"
        app:layout_constraintTop_toBottomOf="@id/tv_alipy"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_order_item_pad_t"
        android:paddingRight="@dimen/d_order_item_pad_t"
        android:drawableLeft="@mipmap/ic_pay_wechat"
        android:drawableRight="@drawable/selector_pay_type"
        android:drawablePadding="@dimen/d_order_my_pad_b"/>

    <TextView
        android:id="@+id/btn_pay"
        style="@style/btn_disable_select"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/str_to_pay"
        android:layout_marginBottom="@dimen/d_after_sale_bottom_btn_mar_t"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"/>

</androidx.constraintlayout.widget.ConstraintLayout>