<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/d_order_my_pad_b"
    android:paddingBottom="@dimen/d_order_my_pad_b">
    <TextView
        android:id="@+id/tv_odd_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_odd_numbers"
        style="@style/tv_order_detail_des_gray"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_odd_numbers"
        style="@style/tv_order_title_black"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/tv_odd_numbers"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_price"
        android:layout_marginTop="@dimen/d_coupon_view_space"/>
    <TextView
        android:id="@+id/tv_time_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_odd_numbers"
        style="@style/tv_order_detail_des_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_goods_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_coupon_view_space"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+200"
        android:paddingLeft="@dimen/d_order_item_pad_t"
        style="@style/tv_logistics_status_black"
        app:layout_constraintTop_toTopOf="@id/tv_goods_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_goods_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_goods_title"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="待到账"
        style="@style/tv_order_price_black"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/d_coupon_view_space"/>
</androidx.constraintlayout.widget.ConstraintLayout>