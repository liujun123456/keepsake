<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!--支付宝账号-->
    <TextView
        android:id="@+id/tv_alipay_account"
        android:text="@string/str_alipay_account"
        style="@style/tv_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="@dimen/d_order_my_pad_b"/>
    <EditText
        android:id="@+id/et_alipay_account"
        style="@style/edit_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/tv_alipay_account"
        app:layout_constraintLeft_toLeftOf="@id/tv_alipay_account"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        android:hint="@string/str_alipay_account_hint"/>
    <View
        android:id="@+id/v_dividing_1"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/et_alipay_account"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"/>
    <!--支付宝账户实名认证姓名-->
    <TextView
        android:id="@+id/tv_real_name"
        android:text="@string/str_alipay_account_real_name"
        style="@style/tv_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/et_real_name"
        style="@style/edit_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/tv_real_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"
        android:hint="@string/str_alipay_account_real_name_hint"/>
    <View
        android:id="@+id/v_dividing_2"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/et_real_name"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"/>
    <!--支付宝账户身份证号码-->
    <TextView
        android:id="@+id/tv_card_id"
        android:text="@string/str_alipay_account_real_card_id"
        style="@style/tv_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/et_card_id"
        style="@style/edit_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/tv_card_id"
        app:layout_constraintLeft_toLeftOf="@id/tv_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"
        android:hint="@string/str_alipay_account_real_card_id_hint"/>
    <View
        android:id="@+id/v_dividing_5"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/et_card_id"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"/>
    <!--手机号-->
    <TextView
        android:id="@+id/tv_phone_num"
        android:text="@string/str_phone_num"
        style="@style/tv_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_5"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/et_phone_num"
        style="@style/edit_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_num"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"
        android:hint="@string/str_phone_num_hint"
        android:inputType="phone"
        android:maxLength="11"/>
    <View
        android:id="@+id/v_dividing_3"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/et_phone_num"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"/>
    <!--验证码-->
    <TextView
        android:id="@+id/tv_verification_code"
        android:text="@string/str_verification_code"
        style="@style/tv_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_3"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/et_verification_code"
        style="@style/edit_w_w_bind_alipay_k"
        app:layout_constraintTop_toBottomOf="@id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toLeftOf="@id/tv_verification_code_get"
        android:hint="@string/str_verification_code_hint"
        android:paddingRight="@dimen/d_coupon_view_space"/>
    <TextView
        android:id="@+id/tv_verification_code_get"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_order_detail_pay_h"
        android:text="@string/str_verification_code_get"
        app:layout_constraintTop_toBottomOf="@id/tv_verification_code"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"
        android:background="@drawable/selector_bind_alipay_verification_code_get"
        android:textColor="@color/selector_bind_alipay_verification_code_get"
        android:textSize="@dimen/d_font_price_total"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingRight="@dimen/d_order_my_pad_b"
        android:gravity="center"/>
    <View
        android:id="@+id/v_dividing_4"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/et_verification_code"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"/>
    <CheckBox
        android:id="@+id/cb_aggreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_agree"
        android:paddingTop="@dimen/d_order_my_pad_b"
        android:paddingBottom="@dimen/d_order_my_pad_b"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_4"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        android:button="@null"
        android:drawableLeft="@drawable/selector_dot_radio_btn"
        android:drawablePadding="@dimen/d_coupon_view_space"
        style="@style/tv_commission_num_k"/>
    <TextView
        android:id="@+id/tv_user_service_agreement"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/str_user_service_agreement"
        app:layout_constraintTop_toTopOf="@id/cb_aggreement"
        app:layout_constraintBottom_toBottomOf="@id/cb_aggreement"
        app:layout_constraintLeft_toRightOf="@id/cb_aggreement"
        android:gravity="center_vertical"
        style="@style/tv_bind_aplipay_service_agreement"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/btn_bind"
        style="@style/btn_disable_select"
        app:layout_constraintLeft_toLeftOf="@id/et_alipay_account"
        app:layout_constraintRight_toRightOf="@id/et_alipay_account"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/str_binding"
        android:layout_marginBottom="@dimen/d_dialog_btn_mar_b"/>
</androidx.constraintlayout.widget.ConstraintLayout>