<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.fang.dashview.DashView
        android:id="@+id/v_logistics_infos_line_solid"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/cl_iv"
        app:layout_constraintRight_toRightOf="@id/cl_iv"
        app:dashWidth="0dp"
        app:lineWidth="@dimen/d_common_dash_W"
        app:lineColor="@color/c_order_btn_stroke"
        app:dashOrientation="1"
        app:lineHeight="@dimen/d_common_dividing"/>
    <com.fang.dashview.DashView
        android:id="@+id/v_logistics_infos_line_dotted"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/cl_iv"
        app:layout_constraintRight_toRightOf="@id/cl_iv"
        app:dashWidth="@dimen/d_common_dash_W"
        app:lineWidth="@dimen/d_common_dash_W"
        app:lineColor="@color/c_order_btn_stroke"
        app:dashOrientation="1"
        app:lineHeight="@dimen/d_common_dividing"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_iv"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:duplicateParentState="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cl_right"
        android:layout_marginRight="@dimen/d_order_my_pad_b">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_point"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:background="@drawable/shape_dot_logistics_infos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_lgoistics_item_collect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:text="@string/collect"
            android:duplicateParentState="true"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/tv_logistics_infos_white"/>
        <ImageView
            android:id="@+id/iv_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_logitics_order_placed"
            android:background="@drawable/selector_lgoistics_item_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            android:duplicateParentState="true"
            tools:visibility="gone"
            android:scaleType="centerInside"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:duplicateParentState="true"
        app:layout_constraintLeft_toRightOf="@id/cl_iv"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_status_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/tv_status_blod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_time"
                tools:text="sdjflksdf"
                android:duplicateParentState="true"
                android:paddingRight="@dimen/d_order_detail_img_mar_b"
                style="@style/tv_logistics_infos_status_selector"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_status_blod"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="的实力附件"
                android:duplicateParentState="true"
                style="@style/tv_logistics_infos_des_selector"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_status_time"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="的实力附件的实力附件的实力附件的实力附件"
            style="@style/tv_logistics_infos_des_selector"
            android:duplicateParentState="true"
            android:paddingBottom="@dimen/d_order_item_pad_t"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>