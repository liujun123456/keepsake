<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/d_after_sale_des_edit_radius"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm"
        android:padding="@dimen/d_order_my_pad_b">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_invoice_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_invoice_type"
                style="@style/tv_order_detail_status_black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <RadioGroup
                android:id="@+id/rg_invoice_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_order_detail_pay_h"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_type"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_invoice_type_paper"
                    android:background="@drawable/selector_invoice_type_bg"
                    android:text="@string/str_paper_invoice"
                    style="@style/w_m_radio_btn"
                    android:textColor="@color/selector_invoice_type_tv"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rb_invoice_type_electronic"
                    android:background="@drawable/selector_invoice_type_bg"
                    android:text="@string/str_ordinary_electronic_invoice"
                    android:visibility="gone"
                    style="@style/w_m_radio_btn"
                    android:layout_marginLeft="@dimen/d_order_my_pad_b"
                    android:textColor="@color/selector_invoice_type_tv"/>
            </RadioGroup>
            <TextView
                android:id="@+id/tv_invoice_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_invoice_statement"
                app:layout_constraintTop_toBottomOf="@id/rg_invoice_type"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                style="@style/tv_set_default_address_prompt"/>
            <View
                android:id="@+id/v_dividing_1"
                style="@style/v_dividing_common_small"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_statement"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"/>
            <TextView
                android:id="@+id/tv_invoice_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_invoice_header"
                style="@style/tv_order_detail_status_black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_pad_t"/>
            <RadioGroup
                android:id="@+id/rg_invoice_header"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_order_detail_pay_h"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_header"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_invoice_header_personal"
                    android:background="@drawable/selector_after_sale_type"
                    android:text="@string/str_personal"
                    style="@style/w_m_radio_btn"
                    android:textColor="@color/selector_after_sale_type"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rb_invoice_header_company"
                    android:background="@drawable/selector_after_sale_type"
                    android:text="@string/str_company"
                    style="@style/w_m_radio_btn"
                    android:layout_marginLeft="@dimen/d_order_my_pad_b"
                    android:textColor="@color/selector_after_sale_type"
                    android:visibility="gone"/>
            </RadioGroup>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_personal_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_after_sale_select_h"
                app:layout_constraintTop_toBottomOf="@id/rg_invoice_header"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/tv_personal_name_k"
                    style="@style/tv_fill_order_k"
                    android:text="@string/str_personal_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <EditText
                    android:id="@+id/et_invoice_personal_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_personal_name_k"
                    app:layout_constraintRight_toRightOf="parent"
                    style="@style/edit_create_receiving_address"
                    android:singleLine="true"
                    android:hint="@string/str_please_fill_in"
                    android:paddingLeft="@dimen/d_order_item_pad_t"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_payee_information_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_payee_information"
                style="@style/tv_order_detail_status_black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cl_personal_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_pad_t"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_payee_information_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_payee_information_k"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b">
                <include layout="@layout/include_select_address_result"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/v_dividing_2"
                style="@style/v_dividing_common_small"
                app:layout_constraintTop_toBottomOf="@id/cl_payee_information_v"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"/>
            <TextView
                android:id="@+id/tv_invoice_content_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_invoice_content"
                style="@style/tv_order_detail_status_black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_pad_t"/>
            <RadioGroup
                android:id="@+id/rg_invoice_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_order_detail_pay_h"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_content_k"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b">
                <RadioButton
                    android:id="@+id/rb_invoice_content_detailed"
                    android:background="@drawable/selector_invoice_type_bg"
                    android:text="@string/str_commodity_details"
                    style="@style/w_m_radio_btn"
                    android:textColor="@color/selector_invoice_type_tv"
                    android:checked="true"/>
            </RadioGroup>
            <TextView
                android:id="@+id/tv_invoice_content_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_invoice_content_statement"
                app:layout_constraintTop_toBottomOf="@id/rg_invoice_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                style="@style/tv_set_default_address_prompt"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_detail_bottom_btn_h"
        app:layout_constraintTop_toBottomOf="@id/sv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        android:layout_marginBottom="@dimen/d_after_sale_bottom_btn_mar_t"
        android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"
        style="@style/btn_order_emphasize"
        android:text="@string/str_confirm"/>
</androidx.constraintlayout.widget.ConstraintLayout>