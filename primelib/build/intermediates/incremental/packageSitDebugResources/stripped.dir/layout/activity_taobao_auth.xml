<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activitys.alibc.TaobaoAuthActivity">

    <include
        android:id="@+id/navigation_header_view"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></include>

    <WebView
        android:id="@+id/webView"
        android:layout_width="406dp"
        android:layout_height="681dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_header_view"></WebView>

    <LinearLayout
        android:id="@+id/ll_bind_tb_root"
        android:layout_width="408dp"
        android:layout_height="680dp"
        android:background="@color/page_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_header_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:src="@mipmap/ico_bind_tb_logo"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="绑定淘宝 开启佣金"
            android:textColor="#E6000000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="笔记关联的商品 产生交易将有佣金分成"
            android:textColor="#99000000"
            android:textSize="15sp"></TextView>

        <RelativeLayout
            android:id="@+id/rl_bind_bt"
            android:layout_width="@dimen/DIMEN_311"
            android:layout_height="@dimen/DIMEN_48dp"
            android:layout_marginTop="@dimen/DIMEN_24dp"
            android:background="@drawable/bind_tb_black_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定淘宝"
                android:textColor="@color/page_white"></TextView>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>