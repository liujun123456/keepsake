<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom_do"
        android:scrollbars="none"
        android:background="@color/c_order_divider">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--收货地址-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@android:color/white"
                android:padding="@dimen/d_order_my_pad_b">
                <include layout="@layout/include_select_address_result"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_address"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_divider_h"
                android:background="@android:color/white"
                android:padding="@dimen/d_order_my_pad_b">
                <include
                    layout="@layout/include_goods_des_double"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--配送-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_distribution"
                style="@style/common_viewgroup_click"
                app:layout_constraintTop_toBottomOf="@id/cl_goods"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/tv_distribution_k"
                    android:text="@string/str_distribution"
                    style="@style/tv_fill_order_k"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_distribution_v"
                    android:text="@string/str_distribution_shunfeng"
                    style="@style/tv_fill_order_v"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_distribution_k"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--发票-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_invoice"
                style="@style/common_viewgroup_click"
                app:layout_constraintTop_toBottomOf="@id/cl_distribution"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_divider_h">
                <TextView
                    android:id="@+id/tv_invoice_k"
                    android:text="@string/str_invoice"
                    style="@style/tv_fill_order_k"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_invoice_v"
                    android:text="@string/str_invoice_disable"
                    style="@style/tv_fill_order_v"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_invoice_k"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="@dimen/d_order_detail_dra_pad"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--优惠券-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_coupon"
                style="@style/common_viewgroup_click"
                app:layout_constraintTop_toBottomOf="@id/cl_invoice"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/tv_coupon_k"
                    android:text="@string/coupon"
                    style="@style/tv_fill_order_k"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_coupon_v"
                    android:text="@string/str_no_available"
                    style="@style/tv_fill_order_v"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_coupon_k"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="@dimen/d_order_detail_dra_pad" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_money_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/d_order_my_pad_b"
                android:paddingLeft="@dimen/d_order_my_pad_b"
                android:paddingRight="@dimen/d_order_my_pad_b"
                app:layout_constraintTop_toBottomOf="@id/cl_coupon"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_divider_h">
                <!--商品金额-->
                <TextView
                    android:id="@+id/tv_goods_price_k"
                    android:text="@string/goods_price"
                    style="@style/tv_fill_order_k"
                    app:layout_constraintTop_toTopOf="@id/tv_goods_price_v"
                    app:layout_constraintBottom_toBottomOf="@id/tv_goods_price_v"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_goods_price_v"
                    tools:text="@string/order_price"
                    style="@style/tv_fill_order_v"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_goods_price_k"
                    app:layout_constraintRight_toRightOf="parent"/>
                <!--运费-->
                <TextView
                    android:id="@+id/tv_freight_k"
                    android:text="@string/freight"
                    style="@style/tv_fill_order_k"
                    app:layout_constraintTop_toTopOf="@id/tv_freight_v"
                    app:layout_constraintBottom_toBottomOf="@id/tv_freight_v"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_freight_v"
                    tools:text="@string/order_price"
                    style="@style/tv_fill_order_v"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_goods_price_v"
                    app:layout_constraintLeft_toRightOf="@id/tv_freight_k"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/d_order_my_pad_b"
                    android:tag="false"/>
                <!--优惠券-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_coupon_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_freight_v"
                    android:layout_marginTop="@dimen/d_order_my_pad_b">
                    <TextView
                        android:id="@+id/tv_coupon_use_k"
                        android:text="@string/coupon"
                        style="@style/tv_fill_order_k"
                        app:layout_constraintTop_toTopOf="@id/tv_coupon_use_v"
                        app:layout_constraintBottom_toBottomOf="@id/tv_coupon_use_v"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:id="@+id/tv_coupon_use_v"
                        tools:text="@string/order_price"
                        style="@style/tv_fill_order_v"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_coupon_use_k"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/v_total_dividing"
                    style="@style/v_dividing_common_small"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_coupon_use"
                    android:layout_marginTop="@dimen/d_order_my_pad_b"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--合计-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_total"
                style="@style/common_viewgroup_click"
                app:layout_constraintTop_toBottomOf="@id/cl_money_des"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/tv_total_k"
                    android:text="@string/total"
                    style="@style/tv_fill_order_k"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_total_v"
                    tools:text="老师的JFK深度交流看法的是阿斯利康的飞机了开始打飞机阿里电视机分厘卡撒酒疯"
                    style="@style/tv_fill_order_v"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_total_k"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:id="@+id/v_bottom_dividing"
            style="@style/v_dividing_common_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_order_detail_bottom_h"
            app:layout_constraintTop_toBottomOf="@id/v_bottom_dividing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/d_order_my_pad_b"
            android:layout_marginRight="@dimen/d_order_my_pad_b">
            <TextView
                android:id="@+id/tv_bottom_money_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/tv_order_price_total_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_submit"/>
            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_order_detail_bottom_btn_h"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_bottom_money_amount"
                android:text="@string/str_submit_order"
                style="@style/btn_order_emphasize"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>