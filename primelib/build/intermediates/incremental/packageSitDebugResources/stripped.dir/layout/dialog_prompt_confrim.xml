<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog_prompt_confrim"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/d_dialog_mar_l"
    android:layout_marginRight="@dimen/d_dialog_mar_l"
    android:paddingTop="@dimen/d_dialog_pad_t"
    android:paddingBottom="@dimen/d_dialog_pad_t">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_cancel_after_sale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingRight="@dimen/d_order_my_pad_b"
        android:gravity="center"
        style="@style/tv_dialog_prompt_title_black"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/str_cancel_after_sale"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingTop="@dimen/d_order_my_pad_b"
        style="@style/tv_order_price_black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/d_dialog_pad_t">
        <TextView
            android:id="@+id/btn_l"
            android:layout_width="@dimen/d_dialog_btn_w"
            android:layout_height="@dimen/d_order_item_btn_h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/v_null"
            android:text="@string/str_cancel"
            style="@style/btn_order_def"
            tools:visibility="visible"/>
        <View
            android:id="@+id/v_null"
            android:layout_width="@dimen/d_dialog_btn_mar"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_l"
            app:layout_constraintRight_toLeftOf="@id/btn_r"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/btn_r"
            android:layout_width="@dimen/d_dialog_btn_w"
            android:layout_height="@dimen/d_order_item_btn_h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/v_null"
            android:text="@string/str_confirm"
            style="@style/btn_order_emphasize"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>