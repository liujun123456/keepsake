<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_include_addess_infos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_address_enter">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_address_l_infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            tools:visibility="visible">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/tv_address_def"
                    android:layout_width="@dimen/d_fill_order_address_def_w"
                    android:layout_height="@dimen/d_fill_order_address_def_h"
                    style="@style/tv_mycoupon_btn_white"
                    android:background="@drawable/shape_order_btn_emphasize"
                    android:text="@string/str_default"
                    android:gravity="center"
                    tools:visibility="visible"
                    app:layout_constraintRight_toLeftOf="@id/tv_address_tag"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="@dimen/d_order_detail_dra_pad"/>
                <TextView
                    android:id="@+id/tv_address_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d_fill_order_address_def_h"
                    style="@style/tv_address_tag_black"
                    android:background="@drawable/shape_after_sale_type_s"
                    tools:text="@string/str_default"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d_fill_order_btn_pad_l"
                    android:paddingRight="@dimen/d_fill_order_btn_pad_l"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_address_def"
                    app:layout_constraintRight_toLeftOf="@id/tv_address_area"
                    android:layout_marginRight="@dimen/d_coupon_view_space" />
                <TextView
                    android:id="@+id/tv_address_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/tv_order_price_black"
                    tools:text="阿斯顿发大的撒飞洒地方撒旦的犯得上方法大师傅大师傅水"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_address_tag" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_address_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/str_refund_money"
                style="@style/tv_logistics_status_black"
                app:layout_constraintTop_toBottomOf="@id/cl_line_1"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_persion_infos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_refund_money"
                style="@style/tv_order_price_black"
                app:layout_constraintTop_toBottomOf="@id/tv_address_detail"
                android:layout_marginTop="@dimen/d_coupon_view_space"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_include_address_select"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_invoice_address_result_h"
            android:text="@string/str_fill_receiving_infos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/tv_logistics_status_black"
            android:gravity="center"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_address_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_address_edit"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toRightOf="@id/cl_include_addess_infos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingTop="@dimen/d_order_my_pad_b"
        android:paddingBottom="@dimen/d_order_my_pad_b"/>
</androidx.constraintlayout.widget.ConstraintLayout>