<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_canle_time_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="取消时间：安康经典服饰的肌肤"
        style="@style/tv_order_detail_code_black"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_progress_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_canle_time_top"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_progress_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/d_order_my_pad_b"
            app:layout_constraintRight_toLeftOf="@id/cl_progress_return"
            android:layout_marginTop="@dimen/d_order_item_pad_t">
            <ImageView
                android:id="@+id/iv_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_after_sale_process_unfinish"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/v_merchant_l"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_merchant"
                app:layout_constraintBottom_toBottomOf="@id/iv_merchant"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_merchant"/>
            <View
                android:id="@+id/v_merchant_r"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_merchant"
                app:layout_constraintBottom_toBottomOf="@id/iv_merchant"
                app:layout_constraintLeft_toRightOf="@id/iv_merchant"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/c_order_img_stroke"/>
            <TextView
                android:id="@+id/tv_progress_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_merchant"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/str_merchant_processing"
                style="@style/tv_after_sale_detail_selector"
                android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_progress_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cl_progress_merchant"
            app:layout_constraintLeft_toRightOf="@id/cl_progress_merchant"
            app:layout_constraintRight_toLeftOf="@id/cl_progress_refund">
            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_after_sale_process_unfinish"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/v_return_l"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_return"
                app:layout_constraintBottom_toBottomOf="@id/iv_return"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_return"
                android:background="@color/c_order_img_stroke"/>
            <View
                android:id="@+id/v_return_r"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_return"
                app:layout_constraintBottom_toBottomOf="@id/iv_return"
                app:layout_constraintLeft_toRightOf="@id/iv_return"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/c_order_img_stroke"/>
            <TextView
                android:id="@+id/tv_progress_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_return"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/str_return_return"
                style="@style/tv_after_sale_detail_selector"
                android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_progress_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cl_progress_merchant"
            app:layout_constraintLeft_toRightOf="@id/cl_progress_return"
            app:layout_constraintRight_toLeftOf="@id/cl_progress_success">
            <ImageView
                android:id="@+id/iv_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_after_sale_process_unfinish"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/v_refund_l"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_refund"
                app:layout_constraintBottom_toBottomOf="@id/iv_refund"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_refund"
                android:background="@color/c_order_img_stroke"/>
            <View
                android:id="@+id/v_refund_r"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_refund"
                app:layout_constraintBottom_toBottomOf="@id/iv_refund"
                app:layout_constraintLeft_toRightOf="@id/iv_refund"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/c_order_img_stroke"/>
            <TextView
                android:id="@+id/tv_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_refund"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/refunding"
                style="@style/tv_after_sale_detail_selector"
                android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_progress_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cl_progress_merchant"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cl_progress_refund">
            <ImageView
                android:id="@+id/iv_refund_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_after_sale_process_finish"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/v_refund_success_l"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_refund_success"
                app:layout_constraintBottom_toBottomOf="@id/iv_refund_success"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_refund_success"
                android:background="@color/c_order_img_stroke"/>
            <View
                android:id="@+id/v_refund_success_r"
                android:layout_width="0dp"
                android:layout_height="@dimen/d_common_dividing"
                app:layout_constraintTop_toTopOf="@id/iv_refund_success"
                app:layout_constraintBottom_toBottomOf="@id/iv_refund_success"
                app:layout_constraintLeft_toRightOf="@id/iv_refund_success"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_refund_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_refund_success"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/str_refund_success"
                style="@style/tv_after_sale_detail_selector"
                android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_dividing_1"
        style="@style/v_dividing"
        app:layout_constraintTop_toBottomOf="@id/cl_progress_all"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_order_item_pad_t"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_1"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom_do_with_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbars="none"
        android:background="@color/c_order_divider">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/d_order_my_pad_b">
            <!--退货寄到以下地址-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_return_tag_infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/tv_return_tag_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_return_tag_address"
                    android:textColor="@color/code_text_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:lineHeight="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tv_addressee_name_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="@string/str_return_tag_address"
                    android:textColor="@color/code_text_color"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:lineHeight="@dimen/dp_24"
                    app:layout_constraintTop_toBottomOf="@id/tv_return_tag_k"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/iv_copy_addressee_infos"
                    android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>
                <TextView
                    android:id="@+id/tv_addressee_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="@string/str_return_tag_address"
                    android:textColor="@color/code_text_color"
                    android:textSize="@dimen/sp_14"
                    android:lineHeight="@dimen/dp_24"
                    app:layout_constraintTop_toBottomOf="@id/tv_addressee_name_phone"
                    app:layout_constraintLeft_toLeftOf="@id/tv_addressee_name_phone"
                    app:layout_constraintRight_toRightOf="@id/tv_addressee_name_phone"/>
                <ImageView
                    android:id="@+id/iv_copy_addressee_infos"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_logistics_infos_copy"
                    android:scaleType="centerInside"
                    app:layout_constraintTop_toTopOf="@id/tv_addressee_name_phone"
                    app:layout_constraintBottom_toBottomOf="@id/tv_addressee_address"
                    app:layout_constraintRight_toRightOf="parent"/>
                <View
                    style="@style/v_dividing_common"
                    app:layout_constraintTop_toBottomOf="@id/tv_addressee_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/d_order_my_pad_b"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--寄回单号-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_return_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/cl_return_tag_infos"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/tv_return_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d_order_detail_bottom_h"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/et_return_code"
                    android:text="@string/str_return_code"
                    android:gravity="center"
                    style="@style/tv_order_title_black"/>
                <EditText
                    android:id="@+id/et_return_code"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:enabled="false"
                    app:layout_constraintTop_toTopOf="@id/tv_return_code"
                    app:layout_constraintBottom_toBottomOf="@id/tv_return_code"
                    app:layout_constraintLeft_toRightOf="@id/tv_return_code"
                    app:layout_constraintRight_toLeftOf="@id/tv_return_code_do"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    style="@style/tv_order_title_black"/>
                <TextView
                    android:id="@+id/tv_return_code_do"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d_order_detail_pay_h"
                    app:layout_constraintTop_toTopOf="@id/tv_return_code"
                    app:layout_constraintBottom_toBottomOf="@id/tv_return_code"
                    app:layout_constraintLeft_toRightOf="@id/et_return_code"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="@string/view_logistics"
                    android:textColor="@color/selector_refund_expess_tv"
                    android:paddingLeft="@dimen/d_order_my_pad_b"
                    android:paddingRight="@dimen/d_order_my_pad_b"
                    android:gravity="center"
                    android:background="@drawable/selector_order_detail_refund_status"
                    android:textSize="@dimen/d_font_price_total"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--失败原因-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_fail_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_return_code"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingTop="@dimen/d_order_my_pad_b"
                android:paddingBottom="@dimen/d_order_my_pad_b">
                <TextView
                    android:id="@+id/tv_fail_reason_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_fail_reason"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/tv_order_detail_status_black"/>
                <TextView
                    android:id="@+id/tv_fail_reason_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_fail_reason"
                    app:layout_constraintTop_toBottomOf="@id/tv_fail_reason_k"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"
                    style="@style/tv_order_title_black"/>
                <TextView
                    android:id="@+id/tv_fail_reason_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_fail_reason"
                    app:layout_constraintTop_toBottomOf="@id/tv_fail_reason_v"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/tv_order_detail_code_black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/v_dividing_2"
                style="@style/v_dividing"
                app:layout_constraintTop_toBottomOf="@id/cl_fail_reason"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_include_goods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingTop="@dimen/d_order_my_pad_b"
                android:paddingBottom="@dimen/d_order_my_pad_b">
                <include
                    layout="@layout/include_goods_des_double"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_refund_money_k"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_after_sale_select_h"
                app:layout_constraintTop_toBottomOf="@id/cl_include_goods"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/str_refund_money"
                android:gravity="center_vertical"
                style="@style/tv_order_price_black"/>
            <TextView
                android:id="@+id/tv_refund_money_v"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="@id/tv_refund_money_k"
                app:layout_constraintBottom_toBottomOf="@id/tv_refund_money_k"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/str_refund_money"
                android:gravity="center_vertical"
                android:textStyle="bold"
                style="@style/tv_order_detail_status_black"/>
            <View
                android:id="@+id/v_dividing_3"
                style="@style/v_dividing"
                app:layout_constraintTop_toBottomOf="@id/tv_refund_money_k"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <!--退货信息-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_return_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/tv_return_info_k"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/str_return_infos"
                    style="@style/tv_after_sale_k" />
                <TextView
                    android:id="@+id/tv_return_info_v"
                    app:layout_constraintTop_toTopOf="@id/tv_return_info_k"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_return_info_k"
                    tools:text="@string/str_refund_money"
                    style="@style/tv_after_sale_v"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--退款原因-->
            <TextView
                android:id="@+id/tv_refund_reason_k"
                app:layout_constraintTop_toBottomOf="@id/cl_return_info"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/str_refund_reason"
                android:layout_marginLeft="@dimen/dp_16"
                style="@style/tv_after_sale_k"/>
            <TextView
                android:id="@+id/tv_refund_reason_v"
                app:layout_constraintTop_toTopOf="@id/tv_refund_reason_k"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_refund_reason_k"
                android:layout_marginRight="@dimen/dp_16"
                tools:text="@string/str_refund_money"
                style="@style/tv_after_sale_v"/>
            <!--退款说明-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_refund_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/tv_refund_reason_v"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/tv_refund_des_k"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/str_refund_des"
                    style="@style/tv_after_sale_k" />
                <TextView
                    android:id="@+id/tv_refund_des_v"
                    app:layout_constraintTop_toTopOf="@id/tv_refund_des_k"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_refund_des_k"
                    tools:text="@string/str_refund_money"
                    style="@style/tv_after_sale_v"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--退款类型-->
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:id="@+id/tv_refund_type_k"
                app:layout_constraintTop_toBottomOf="@id/cl_refund_des"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/str_refund_type"
                style="@style/tv_after_sale_k"/>
            <TextView
                android:layout_marginRight="@dimen/dp_16"
                android:id="@+id/tv_refund_type_v"
                app:layout_constraintTop_toTopOf="@id/tv_refund_type_k"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_refund_type_k"
                tools:text="@string/str_refund_money"
                style="@style/tv_after_sale_v"/>
            <!--退款时间-->
            <TextView
                android:id="@+id/tv_apply_time_k"
                app:layout_constraintTop_toBottomOf="@id/tv_refund_type_v"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/str_apply_time"
                android:layout_marginLeft="@dimen/dp_16"
                style="@style/tv_after_sale_k"/>
            <TextView
                android:id="@+id/tv_apply_time_v"
                app:layout_constraintTop_toTopOf="@id/tv_apply_time_k"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_apply_time_k"
                tools:text="@string/str_refund_money"
                android:layout_marginRight="@dimen/dp_16"
                style="@style/tv_after_sale_v"/>
            <!--退款编号-->
            <TextView
                android:id="@+id/tv_refund_code_k"
                app:layout_constraintTop_toBottomOf="@id/tv_apply_time_v"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/str_refund_code"
                android:layout_marginLeft="@dimen/dp_16"
                style="@style/tv_after_sale_k"/>
            <TextView
                android:id="@+id/tv_refund_code_v"
                app:layout_constraintTop_toTopOf="@id/tv_refund_code_k"
