<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/d_dialog_refund_reason_mar_t"
    android:paddingLeft="@dimen/d_order_my_pad_b"
    android:paddingRight="@dimen/d_order_my_pad_b"
    android:paddingTop="@dimen/d_order_item_pad_t"
    android:paddingBottom="@dimen/d_dialog_btn_mar_b"
    android:background="@drawable/shape_after_sale_refund_reason">
    <TextView
        android:id="@+id/tv_dialog_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/str_refund_wuli_com_select"
        style="@style/tv_after_sale_dialog_prompt"/>
    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_dialog_close"
        app:layout_constraintTop_toTopOf="@id/tv_dialog_prompt"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_prompt"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerInside"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_company"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_prompt"
        app:layout_constraintBottom_toTopOf="@id/btn_dialog_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_order_item_pad_t"
        tools:listitem="@layout/rv_item_select_logistics_company"/>
    <TextView
        android:id="@+id/btn_dialog_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_detail_bottom_btn_h"
        app:layout_constraintTop_toBottomOf="@id/rv_dialog_company"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/str_confirm"
        android:layout_marginTop="@dimen/d_order_item_pad_t"
        style="@style/btn_dialog_refund_reason_emphasize"/>

</androidx.constraintlayout.widget.ConstraintLayout>