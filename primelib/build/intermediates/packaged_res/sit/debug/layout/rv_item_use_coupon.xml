<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/d_use_coupon_mar_t"
    android:background="@drawable/selector_use_coupon_item_bg">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_use_coupon_l"
        android:layout_width="@dimen/d_coupon_price_w"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/v_dividing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/v_dividing">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_price_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_use_coupon_unreceive">

            <TextView
                android:id="@+id/tv_use_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="￥12345666"
                android:textColor="@color/selector_use_coupon_price"
                android:textSize="@dimen/d_font_mycoupon_price"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_use_coupon_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_use_coupon_price"
                android:textColor="@color/selector_use_coupon_condition"
                android:text="满10.01可用"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/d_font_sku"
                android:paddingTop="@dimen/d_order_detail_dra_pad"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_use_coupon_unreceive"
            android:layout_width="@dimen/d_use_coupon_receive_w"
            android:layout_height="@dimen/d_use_coupon_receive_h"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_price_t"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/str_unreceive"
            android:textColor="@color/c_order_sku"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/shape_use_coupon_unreceive_bg"
            android:textSize="@dimen/d_font_coupon_receive"
            android:layout_marginTop="@dimen/d_order_detail_dra_pad"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/v_dividing"
        android:layout_width="@dimen/d_common_dividing_small"
        android:layout_height="@dimen/d_coupon_dividing_h"
        android:background="@color/c_order_btn_stroke"
        app:layout_constraintLeft_toRightOf="@id/cl_use_coupon_l"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/d_use_coupon_mar_t"
        android:layout_marginBottom="@dimen/d_use_coupon_mar_t"/>
    <TextView
        android:id="@+id/tv_use_coupon_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/v_dividing"
        app:layout_constraintRight_toLeftOf="@id/iv_use_coupon_status"
        tools:text="打算离开房间时刻提防"
        app:layout_constraintTop_toTopOf="@id/v_dividing"
        app:layout_constraintBottom_toTopOf="@id/tv_use_coupon_time"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        android:textSize="@dimen/d_font_order_btn"
        android:textColor="@color/selector_use_coupon_price"
        android:singleLine="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_use_coupon_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_use_coupon_title"
        app:layout_constraintRight_toRightOf="@id/tv_use_coupon_title"
        tools:text="打算离开房间时刻提防"
        app:layout_constraintTop_toBottomOf="@id/tv_use_coupon_title"
        app:layout_constraintBottom_toTopOf="@id/rl_use_coupon_des_line_1"
        android:textSize="@dimen/d_font_order_btn"
        android:textColor="@color/selector_use_coupon_time"
        android:singleLine="true"
        android:gravity="center_vertical"/>
    <RelativeLayout
        android:id="@+id/rl_use_coupon_des_line_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_use_coupon_title"
        app:layout_constraintRight_toRightOf="@id/tv_use_coupon_title"
        app:layout_constraintTop_toBottomOf="@id/tv_use_coupon_time"
        app:layout_constraintBottom_toBottomOf="@id/v_dividing">
        <TextView
            android:id="@+id/tv_use_coupon_des_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="打算离开房间时刻提防"
            android:textSize="@dimen/d_font_coupon_use_des"
            android:textColor="@color/selector_use_coupon_condition"
            android:singleLine="true"
            android:drawableRight="@drawable/selector_coupon_use_des_img"
            android:drawablePadding="@dimen/d_order_detail_dra_pad"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_use_coupon_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="上空的飞机但是肌肤接收了开发的埃里克森的肌肤埃里克圣诞节分厘卡老师肯定发\n上空的飞机\n上空的飞机\n上空的飞机\n"
        android:textSize="@dimen/d_font_coupon_use_des"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/selector_use_coupon_condition"
        app:layout_constraintTop_toBottomOf="@id/rl_use_coupon_des_line_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_use_coupon_title"
        app:layout_constraintRight_toRightOf="@id/tv_use_coupon_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_use_coupon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_after_sale_process_unfinish"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/v_dividing"
        app:layout_constraintBottom_toBottomOf="@id/v_dividing"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/d_use_coupon_mar_t"/>
</androidx.constraintlayout.widget.ConstraintLayout>