<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activitys.commissions.ApplyWithdrawalAcitivity">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_item_btn_h"
        android:background="@color/c_radio_btn_soild"
        android:text="@string/str_apply_withdrawal_prompt"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        android:gravity="center"
        style="@style/tv_order_detail_des_gray"/>
    <TextView
        android:id="@+id/tv_withdrawal_amount_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_withdrawal_amount"
        app:layout_constraintTop_toBottomOf="@id/tv_prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginTop="@dimen/d_order_my_pad_b"
        android:gravity="center"
        style="@style/tv_after_sale_edit"/>
    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_symbol"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_amount_k"
        app:layout_constraintLeft_toLeftOf="@id/tv_withdrawal_amount_k"
        android:paddingTop="@dimen/d_order_my_pad_b"
        android:paddingBottom="@dimen/d_order_my_pad_b"
        android:textColor="@color/c_title"
        android:textSize="@dimen/d_font_mycoupon_price"/>
    <EditText
        android:id="@+id/et_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/str_symbol"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_amount_k"
        app:layout_constraintLeft_toRightOf="@id/tv_symbol"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        android:paddingTop="@dimen/d_order_my_pad_b"
        android:paddingLeft="@dimen/d_coupon_view_space"
        android:paddingBottom="@dimen/d_order_my_pad_b"
        android:textColor="@color/c_title"
        android:textSize="@dimen/d_font_mycoupon_price"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:background="@android:color/transparent"/>
    <View
        android:id="@+id/v_dividing_1"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/et_amount"
        app:layout_constraintLeft_toLeftOf="@id/tv_symbol"
        app:layout_constraintRight_toRightOf="@id/et_amount"/>

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d_order_my_pad_b"
        android:paddingBottom="@dimen/d_order_my_pad_b"
        android:text="@string/str_current_balance"
        android:textColor="@color/c_order_sku"
        android:textSize="@dimen/d_font_prompt"
        app:layout_constraintLeft_toLeftOf="@id/tv_symbol"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_1" />

    <TextView
        android:id="@+id/tv_full_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/str_full_withdrawal"
        app:layout_constraintTop_toTopOf="@id/tv_balance"
        app:layout_constraintBottom_toBottomOf="@id/tv_balance"
        app:layout_constraintLeft_toRightOf="@id/tv_balance"
        android:gravity="center_vertical"
        style="@style/tv_order_price_black"
        android:textStyle="bold"
        android:paddingLeft="@dimen/d_coupon_view_space"/>
    <TextView
        android:id="@+id/tv_withdrawal_to_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_withdrawal_to_alipay"
        app:layout_constraintTop_toBottomOf="@id/tv_balance"
        app:layout_constraintLeft_toLeftOf="@id/tv_symbol"
        android:layout_marginTop="@dimen/d_order_my_pad_b"
        android:gravity="center"
        style="@style/tv_after_sale_edit"/>
    <TextView
        android:id="@+id/tv_withdrawal_to_alipay_v"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_binding_alipay"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_to_alipay"
        app:layout_constraintLeft_toLeftOf="@id/tv_symbol"
        app:layout_constraintRight_toRightOf="@id/et_amount"
        android:paddingTop="@dimen/d_order_my_pad_b"
        android:paddingBottom="@dimen/d_order_my_pad_b"
        android:gravity="center_vertical"
        style="@style/tv_order_title_black"
        android:drawableLeft="@mipmap/ic_alipay_tv_dra"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:drawablePadding="@dimen/d_order_my_pad_b"/>
    <View
        android:id="@+id/v_dividing_2"
        style="@style/v_dividing_common_small_w_0"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_to_alipay_v"
        app:layout_constraintLeft_toLeftOf="@id/tv_symbol"
        app:layout_constraintRight_toRightOf="@id/et_amount"/>
    <TextView
        android:id="@+id/btn_withdrawal"
        style="@style/btn_disable_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_symbol"
        app:layout_constraintRight_toRightOf="@id/et_amount"
        android:text="@string/str_withdrawal"
        android:layout_marginBottom="@dimen/d_dialog_btn_mar_b"/>
</androidx.constraintlayout.widget.ConstraintLayout>