<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/c_order_divider">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingRight="@dimen/d_order_my_pad_b"
        android:layout_marginTop="@dimen/d_order_my_pad_b">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/d_order_item_pad_t">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:listitem="@layout/rv_item_use_coupon"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_unavail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:listitem="@layout/rv_item_use_coupon"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_open"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_order_detail_bottom_btn_h"
                app:layout_constraintTop_toBottomOf="@id/rv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:background="@drawable/shape_mycoupon_item_bg_unuse">
                <TextView
                    android:id="@+id/tv_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/str_unavailable_coupons"
                    style="@style/tv_set_default_address_prompt"
                    android:drawableRight="@mipmap/ic_coupon_use_des_open"
                    android:drawablePadding="@dimen/d_order_detail_dra_pad"
                    android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_detail_bottom_btn_h"
        android:text="@string/str_confirm"
        style="@style/btn_order_emphasize"
        app:layout_constraintTop_toBottomOf="@id/sv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/d_after_sale_bottom_btn_mar_t"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"/>
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_item_pad_t"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_use_coupon_bottom_cover"/>

</androidx.constraintlayout.widget.ConstraintLayout>