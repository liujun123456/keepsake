<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/d_order_my_pad_b"
    android:paddingBottom="@dimen/d_order_my_pad_b">
    <TextView
        android:id="@+id/tv_withdrawal_title"
        style="@style/w_w_after_sale_key"
        android:text="@string/str_withdrawal"
        app:layout_constraintTop_toTopOf="@id/tv_withdrawal_money"
        app:layout_constraintBottom_toBottomOf="@id/tv_withdrawal_money"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_withdrawal_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/tv_logistics_status_black"
        tools:text="@string/str_withdrawal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_withdrawal_title"
        android:singleLine="true"
        android:gravity="right"/>
    <TextView
        android:id="@+id/tv_withdrawal_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_selector_withdrawal_status"
        tools:text="@string/str_withdrawal"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_money"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/d_coupon_view_space"/>
    <TextView
        android:id="@+id/tv_withdrawal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_order_detail_des_gray"
        tools:text="@string/str_withdrawal"
        app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_money"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_order_my_pad_b"/>
</androidx.constraintlayout.widget.ConstraintLayout>