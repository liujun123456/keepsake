<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_progress_merchant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        app:layout_constraintRight_toLeftOf="@id/cl_progress_return"
        android:layout_marginTop="@dimen/d_order_item_pad_t">
        <ImageView
            android:id="@+id/iv_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_after_sale_process_unfinish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/v_merchant_l"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="@id/iv_merchant"
            app:layout_constraintBottom_toBottomOf="@id/iv_merchant"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_merchant"/>
        <View
            android:id="@+id/v_merchant_r"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="@id/iv_merchant"
            app:layout_constraintBottom_toBottomOf="@id/iv_merchant"
            app:layout_constraintLeft_toRightOf="@id/iv_merchant"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/c_order_img_stroke"/>
        <TextView
            android:id="@+id/tv_progress_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_merchant"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/str_submit_withdrawal_apply"
            style="@style/tv_after_sale_detail_selector"
            android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_progress_return"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cl_progress_merchant"
        app:layout_constraintLeft_toRightOf="@id/cl_progress_merchant"
        app:layout_constraintRight_toLeftOf="@id/cl_progress_success">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_after_sale_process_unfinish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/v_return_l"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="@id/iv_return"
            app:layout_constraintBottom_toBottomOf="@id/iv_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_return"
            android:background="@color/c_order_img_stroke"/>
        <View
            android:id="@+id/v_return_r"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="@id/iv_return"
            app:layout_constraintBottom_toBottomOf="@id/iv_return"
            app:layout_constraintLeft_toRightOf="@id/iv_return"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/c_order_img_stroke"/>
        <TextView
            android:id="@+id/tv_progress_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/str_under_review"
            style="@style/tv_after_sale_detail_selector"
            android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_progress_success"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cl_progress_merchant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cl_progress_return">
        <ImageView
            android:id="@+id/iv_refund_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_after_sale_process_finish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/v_refund_success_l"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="@id/iv_refund_success"
            app:layout_constraintBottom_toBottomOf="@id/iv_refund_success"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_refund_success"
            android:background="@color/c_order_img_stroke"/>
        <View
            android:id="@+id/v_refund_success_r"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_common_dividing"
            app:layout_constraintTop_toTopOf="@id/iv_refund_success"
            app:layout_constraintBottom_toBottomOf="@id/iv_refund_success"
            app:layout_constraintLeft_toRightOf="@id/iv_refund_success"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_refund_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_refund_success"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/str_withdrawal_success"
            style="@style/tv_after_sale_detail_selector"
            android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_dividing_1"
        style="@style/v_dividing"
        app:layout_constraintTop_toBottomOf="@id/cl_progress_merchant"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_order_item_pad_t"/>
    <LinearLayout
        android:id="@+id/ll_fail_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/d_order_my_pad_b">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_fail_reason"
            style="@style/tv_order_detail_status_black"/>
        <TextView
            android:id="@+id/tv_fail_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/str_fail_reason"
            style="@style/tv_order_title_black"
            android:paddingTop="@dimen/d_coupon_view_space"/>
        <TextView
            android:id="@+id/tv_fail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/str_fail_reason"
            style="@style/tv_order_detail_code_black"/>
    </LinearLayout>
    <View
        android:id="@+id/v_dividing_2"
        style="@style/v_dividing"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ll_fail_des"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/c_order_divider">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@android:color/white">
            <include
                layout="@layout/include_withdrawal_detail_infos"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/btn_reapply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_order_detail_bottom_btn_h"
            style="@style/btn_dialog_refund_reason_emphasize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginLeft="@dimen/d_order_my_pad_b"
            android:layout_marginRight="@dimen/d_order_my_pad_b"
            android:layout_marginBottom="@dimen/d_after_sale_bottom_btn_mar_t"
            android:text="@string/str_re_apply" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>