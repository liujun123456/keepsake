<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sv"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:background="@color/c_order_divider"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom_do">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--未付款倒计时-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@android:color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_top_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_unpay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:padding="@dimen/d_order_my_pad_b">
                        <TextView
                            android:id="@+id/tv_unpay_prompt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/view_logistics"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="center"
                            style="@style/tv_order_btn_black"/>
                        <TextView
                            android:id="@+id/btn_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/d_order_detail_pay_h"
                            app:layout_constraintTop_toBottomOf="@id/tv_unpay_prompt"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="@dimen/d_order_my_pad_b"
                            style="@style/btn_order_emphasize"
                            android:text="@string/immediate_payment"
                            android:gravity="center" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/v_dividing_1"
                    style="@style/v_dividing"
                    app:layout_constraintTop_toBottomOf="@id/cl_top_top"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--状态-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/cl_top"
                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_status_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="@dimen/d_order_my_pad_b">
                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="@dimen/d_order_detail_address_dot"
                        android:layout_height="@dimen/d_order_detail_address_dot"
                        android:background="@drawable/shape_dot_order_detail"
                        tools:src="@mipmap/ic_order_detail_logistics"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_status"
                        app:layout_constraintRight_toLeftOf="@id/btn_view"
                        android:textStyle="bold"
                        style="@style/tv_order_detail_status_black"
                        android:layout_marginLeft="@dimen/d_order_detail_address_mar_l"
                        tools:text="@string/in_transit"/>
                    <TextView
                        android:id="@+id/tv_des"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_status"
                        app:layout_constraintLeft_toLeftOf="@id/tv_status"
                        app:layout_constraintRight_toRightOf="@id/tv_status"
                        style="@style/tv_order_detail_des_gray"
                        android:singleLine="true"
                        tools:text="四点零分距离喀什地方绿卡的撒附件埃里克多少积分累计扣分埃里克圣诞节分厘卡"/>
                    <TextView
                        android:id="@+id/btn_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:text="@string/view_logistics"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_status"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/btn_order_detail"
                        android:layout_marginLeft="@dimen/d_order_item_pad_t"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/v_dividing_3"
                    style="@style/v_dividing"
                    app:layout_constraintTop_toBottomOf="@id/cl_status_top"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--地址信息-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/cl_status"
                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_address_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="@dimen/d_order_my_pad_b">
                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="@dimen/d_order_detail_address_dot"
                        android:layout_height="@dimen/d_order_detail_address_dot"
                        android:background="@drawable/shape_dot_order_detail"
                        android:src="@mipmap/ic_order_detail_location"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_address"
                        app:layout_constraintRight_toLeftOf="@id/tv_name"
                        android:singleLine="true"
                        android:textStyle="bold"
                        style="@style/tv_order_price_black"
                        android:layout_marginLeft="@dimen/d_order_detail_address_mar_l"
                        tools:text="四点零分距"/>
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_name"
                        app:layout_constraintRight_toLeftOf="@id/btn_address"
                        app:layout_constraintBottom_toBottomOf="@id/tv_name"
                        android:singleLine="true"
                        android:textStyle="bold"
                        style="@style/tv_order_price_black"
                        tools:text="@string/order_detail_phone"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_name"
                        app:layout_constraintLeft_toLeftOf="@id/tv_name"
                        app:layout_constraintRight_toRightOf="@id/tv_phone"
                        style="@style/tv_order_price_black"
                        tools:text="四点零分距离喀什地方绿卡的撒附件埃里克多少积分累计扣分埃里克圣诞节分厘卡"/>
                    <TextView
                        android:id="@+id/btn_address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:text="@string/modify"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_phone"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/btn_order_detail"
                        android:layout_marginLeft="@dimen/d_order_item_pad_t"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/v_dividing_2"
                    style="@style/v_dividing"
                    app:layout_constraintTop_toBottomOf="@id/cl_address_top"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--商品信息-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/cl_address"
                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_goods_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d_order_my_pad_b"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_include_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/d_order_detail_img_mar_b"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <include
                            layout="@layout/include_goods_des_double"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/btn_goods_do"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d_order_detail_pay_h"
                        android:text="@string/apply_refund"
                        app:layout_constraintTop_toBottomOf="@id/cl_include_goods"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/btn_order_detail"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_marginTop="@dimen/d_order_detail_img_mar_b"/>
                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/btn_goods_do"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="@dimen/d_order_detail_price_mar_t"
                        android:text="@string/goods_price"
                        style="@style/tv_order_price_black"/>
                    <TextView
                        android:id="@+id/tv_goods_price_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_goods_price"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/order_price"
                        style="@style/tv_order_price_black"/>
                    <TextView
                        android:id="@+id/tv_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_goods_price"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="@dimen/d_order_my_pad_b"
                        android:text="@string/freight"
                        style="@style/tv_order_price_black"/>
                    <TextView
                        android:id="@+id/tv_freight_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_freight"
                        app:layout_constraintLeft_toRightOf="@id/tv_freight"
                        tools:text="@string/freight_weight"
                        style="@style/tv_order_detail_freight_gray"/>
                    <TextView
                        android:id="@+id/tv_freight_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_freight"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/order_price"
                        style="@style/tv_order_price_black"/>
                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_freight"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="@dimen/d_order_my_pad_b"
                        android:text="@string/coupon"
                        style="@style/tv_order_price_black"/>
                    <TextView
                        android:id="@+id/tv_coupon_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_coupon"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/deduction_price"
                        style="@style/tv_order_price_black"/>
                    <View
                        android:id="@+id/v_dividing_goods"
                        style="@style/v_dividing_common"
                        app:layout_constraintTop_toBottomOf="@id/tv_coupon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="@dimen/d_order_my_pad_b"/>
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_total_v"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tv_total_v"
                        android:text="@string/total"
                        style="@style/tv_order_price_black"/>
                    <TextView
                        android:id="@+id/tv_total_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/v_dividing_goods"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/deduction_price"
                        android:layout_marginTop="@dimen/d_order_my_pad_b"
                        style="@style/tv_order_detail_status_black"
                        android:textStyle="bold"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/v_dividing_4"
                    style="@style/v_dividing"
                    app:layout_constraintTop_toBottomOf="@id/cl_goods_top"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--单号等信息-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_order_infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/cl_goods"
                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_order_infos_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingLeft="@dimen/d_order_my_pad_b"
                    android:paddingRight="@dimen/d_order_my_pad_b"
                    android:paddingBottom="@dimen/d_order_my_pad_b">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_receiving_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/tv_receiving_info"
                            android:text="@string/receiving_info"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:id="@+id/tv_receiving_info_v"
                            tools:text="1234567890321568712345678903215687dsfjkd12345678903215687lsadkfjlksdf "
                            style="@style/tv_after_sale_v"
                            app:layout_constraintTop_toTopOf="@id/tv_receiving_info"
                            app:layout_constraintLeft_toRightOf="@id/tv_receiving_info"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_order_code"
                        style="@style/tv_after_sale_k"
                        app:layout_constraintTop_toBottomOf="@id/cl_receiving_info"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_order_code_v"
                        android:text="@string/order_code"/>
                    <TextView
                        android:id="@+id/tv_order_code_v"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/d_order_item_pad_t"
                        app:layout_constraintTop_toTopOf="@id/tv_order_code"
                        app:layout_constraintRight_toLeftOf="@id/tv_order_code_copy"
                        app:layout_constraintLeft_toRightOf="@id/tv_order_code"
                        tools:text="12345678903215687"
                        android:gravity="right"
                        style="@style/tv_order_detail_code_black"/>
                    <TextView
                        android:id="@+id/tv_order_code_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_order_code"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_order_code_v"
                        android:text="@string/copy"
                        android:paddingLeft="@dimen/d_order_detail_copy_mar_l"
                        style="@style/tv_order_count_total_black"/>
                    <TextView
                        android:id="@+id/tv_creat_time"
                        style="@style/tv_after_sale_k"
                        app:layout_constraintTop_toBottomOf="@id/tv_order_code"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@string/creat_time"/>
                    <TextView
                        android:id="@+id/tv_creat_time_v"
                        style="@style/tv_after_sale_v"
                        app:layout_constraintTop_toTopOf="@id/tv_creat_time"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_creat_time"
                        tools:text="12345678903215687"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_pay_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_creat_time"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/tv_pay_time"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/pay_time"/>
                        <TextView
                            android:id="@+id/tv_pay_time_v"
                            style="@style/tv_after_sale_v"
                            app:layout_constraintTop_toTopOf="@id/tv_pay_time"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_pay_time"
                            tools:text="12345678903215687"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_courier_infos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cl_pay_time"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/tv_courier_number"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/courier_number"/>
                        <TextView
                            android:id="@+id/tv_courier_number_v"
                            style="@style/tv_after_sale_v"
                            app:layout_constraintTop_toTopOf="@id/tv_courier_number"
                            app:layout_constraintRight_toLeftOf="@id/tv_courier_number_copy"
                            app:layout_constraintLeft_toRightOf="@id/tv_courier_number"
                            tools:text="12345678903215687"/>
                        <TextView
                            android:id="@+id/tv_courier_number_copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/tv_courier_number"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_courier_number_v"
                            android:text="@string/copy"
                            android:paddingLeft="@dimen/d_order_detail_copy_mar_l"
                            style="@style/tv_order_count_total_black"/>
                        <TextView
                            android:id="@+id/tv_logistics_company"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toBottomOf="@id/tv_courier_number"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/logistics_company"/>
                        <TextView
                            android:id="@+id/tv_logistics_company_v"
                            style="@style/tv_after_sale_v"
                            app:layout_constraintLeft_toRightOf="@id/tv_logistics_company"
                            app:layout_constraintTop_toTopOf="@id/tv_logistics_company"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:text="12345678903215687"/>
                        <TextView
                            android:id="@+id/tv_delivery_time"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toBottomOf="@id/tv_logistics_company"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/delivery_time"/>
                        <TextView
                            android:id="@+id/tv_delivery_time_v"
                            style="@style/tv_after_sale_v"
                            app:layout_constraintLeft_toRightOf="@id/tv_delivery_time"
                            app:layout_constraintTop_toTopOf="@id/tv_delivery_time"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:text="12345678903215687"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_transaction_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/cl_courier_infos"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/tv_transaction_time"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="@string/transaction_time"/>
                        <TextView
                            android:id="@+id/tv_transaction_time_v"
                            style="@style/tv_after_sale_v"
                            app:layout_constraintLeft_toRightOf="@id/tv_transaction_time"
                            app:layout_constraintTop_toTopOf="@id/tv_transaction_time"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:text="12345678903215687"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_cancel_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cl_transaction_time"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/tv_cancel_time"
                            style="@style/tv_after_sale_k"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
