<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="订单支付成功"
        style="@style/tv_logistics_status_black"
        android:drawableTop="@drawable/selector_pay_result"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/d_pay_need_mar_t"
        android:drawablePadding="@dimen/d_order_item_pad_t"/>
    <TextView
        android:id="@+id/tv_faile_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        android:layout_marginTop="@dimen/d_order_my_pad_b"
        style="@style/tv_pay_need"
        tools:text="asdkfjsadfj撒旦克里夫就是"/>

    <View
        android:id="@+id/v_dividing_1"
        style="@style/v_dividing_common_small_w_0"
        android:layout_marginLeft="@dimen/d_order_item_pad_t"
        android:layout_marginRight="@dimen/d_order_item_pad_t"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/d_pay_result_divider_mar_t"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_1"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/tv_order_code"
            style="@style/tv_pay_result_k"
            android:text="@string/order_code"
            android:layout_marginTop="@dimen/d_pay_result_divider_mar_t"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_code_v"
            style="@style/tv_pay_result_v"
            tools:text="@string/order_code"
            app:layout_constraintTop_toTopOf="@id/tv_order_code"
            app:layout_constraintLeft_toRightOf="@id/tv_order_code"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_pay_time"
            style="@style/tv_pay_result_k"
            android:text="@string/str_pay_time"
            app:layout_constraintTop_toBottomOf="@id/tv_order_code_v"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_pay_time_v"
            style="@style/tv_pay_result_v"
            tools:text="@string/order_code"
            app:layout_constraintTop_toTopOf="@id/tv_pay_time"
            app:layout_constraintLeft_toRightOf="@id/tv_pay_time"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_pay_money"
            style="@style/tv_pay_result_k"
            android:text="@string/str_pay_money"
            app:layout_constraintTop_toBottomOf="@id/tv_pay_time_v"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_pay_money_v"
            style="@style/tv_pay_result_v"
            tools:text="@string/order_code"
            app:layout_constraintTop_toTopOf="@id/tv_pay_money"
            app:layout_constraintLeft_toRightOf="@id/tv_pay_money"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_pay_type"
            style="@style/tv_pay_result_k"
            android:text="@string/str_pay_type"
            app:layout_constraintTop_toBottomOf="@id/tv_pay_money_v"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_pay_type_v"
            style="@style/tv_pay_result_v"
            tools:text="@string/order_code"
            app:layout_constraintTop_toTopOf="@id/tv_pay_type"
            app:layout_constraintLeft_toRightOf="@id/tv_pay_type"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/btn_l"
        android:layout_width="0dp"
        android:layout_height="@dimen/d_order_detail_bottom_btn_h"
        android:background="@drawable/shape_order_btn"
        android:text="@string/str_see_order"
        app:layout_constraintTop_toTopOf="@id/btn_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_r"
        android:gravity="center"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"/>
    <TextView
        android:id="@+id/btn_r"
        android:layout_width="0dp"
        android:layout_height="@dimen/d_order_detail_bottom_btn_h"
        style="@style/btn_dialog_refund_reason_emphasize"
        tools:text="@string/str_repay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_l"
        android:layout_marginBottom="@dimen/d_after_sale_bottom_btn_mar_t"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"/>

</androidx.constraintlayout.widget.ConstraintLayout>