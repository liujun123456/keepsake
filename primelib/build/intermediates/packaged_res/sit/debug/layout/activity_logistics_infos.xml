<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/d_order_my_pad_b">
        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="@dimen/d_order_detail_address_dot"
            android:layout_height="@dimen/d_order_detail_address_dot"
            android:background="@drawable/shape_dot_order_detail"
            android:src="@mipmap/ic_logitics_status_order_placed"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/in_transit"
            app:layout_constraintTop_toTopOf="@id/iv_status"
            app:layout_constraintBottom_toBottomOf="@id/iv_status"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@id/iv_status"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/d_order_detail_address_mar_l"
            style="@style/tv_logistics_status_black"/>
        <TextView
            android:id="@+id/tv_company_k"
            android:layout_width="@dimen/d_logistics_key_w"
            android:layout_height="wrap_content"
            android:text="@string/distribution_company"
            app:layout_constraintTop_toBottomOf="@id/iv_status"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/d_order_my_pad_b"
            style="@style/tv_order_price_black"/>
        <TextView
            android:id="@+id/tv_company_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="啊圣诞快乐房价ask地方埃里克电视机分厘卡士大夫就阿里山扩大飞机了"
            app:layout_constraintTop_toTopOf="@id/tv_company_k"
            app:layout_constraintLeft_toRightOf="@id/tv_company_k"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/tv_order_price_black"/>
        <TextView
            android:id="@+id/tv_courier_number_k"
            android:layout_width="@dimen/d_logistics_key_w"
            android:layout_height="wrap_content"
            android:text="@string/courier_number"
            app:layout_constraintTop_toBottomOf="@id/tv_company_v"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_courier_number_v"
            android:layout_marginTop="@dimen/d_order_my_pad_b"
            style="@style/tv_order_price_black"/>
        <TextView
            android:id="@+id/tv_courier_number_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="按时灯笼裤飞机撒赖扩大飞机啊螺丝扣搭街坊立刻撒旦附件埃里克圣诞节分厘卡"
            app:layout_constraintTop_toTopOf="@id/tv_courier_number_k"
            app:layout_constraintLeft_toRightOf="@id/tv_courier_number_k"
            app:layout_constraintRight_toLeftOf="@id/iv_copy"
            style="@style/tv_order_price_black"/>
        <ImageView
            android:id="@+id/iv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_logistics_infos_copy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_courier_number_v"
            app:layout_constraintTop_toTopOf="@id/tv_courier_number_k"
            android:scaleType="centerInside"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/v_dividing"
        style="@style/v_dividing"
        app:layout_constraintTop_toBottomOf="@id/cl_status"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v_dividing"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingRight="@dimen/d_order_my_pad_b"
        android:paddingTop="@dimen/d_order_item_pad_t"
        android:paddingBottom="@dimen/d_logistics_info_item_pad_b"
        tools:listitem="@layout/rv_item_logistics_infos"/>
</androidx.constraintlayout.widget.ConstraintLayout>