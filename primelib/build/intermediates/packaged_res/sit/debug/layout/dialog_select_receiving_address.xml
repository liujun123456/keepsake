<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/d_dialog_select_reveiving_address_mar_t"
    android:background="@drawable/shape_after_sale_refund_reason">
    <TextView
        android:id="@+id/tv_dialog_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/str_select_region"
        style="@style/tv_after_sale_dialog_prompt"
        android:layout_marginTop="@dimen/d_dialog_pad_t"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"/>
    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_dialog_close"
        app:layout_constraintTop_toTopOf="@id/tv_dialog_prompt"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_prompt"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/d_order_my_pad_b"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_prompt"
        app:layout_constraintLeft_toLeftOf="@id/tv_dialog_prompt"
        app:layout_constraintRight_toRightOf="@id/iv_dialog_close"
        android:layout_marginTop="@dimen/d_dialog_pad_t">
        <TextView
            android:id="@+id/tv_province"
            style="@style/tv_receiving_address_result"
            android:text="@string/str_select_please"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_city"
            style="@style/tv_receiving_address_result"
            android:text="@string/str_select_please"
            app:layout_constraintTop_toTopOf="@id/tv_province"
            app:layout_constraintLeft_toRightOf="@id/tv_province"
            android:layout_marginLeft="@dimen/d_coupon_view_space"/>
        <TextView
            android:id="@+id/tv_area"
            style="@style/tv_receiving_address_result"
            android:text="@string/str_select_please"
            app:layout_constraintTop_toTopOf="@id/tv_province"
            app:layout_constraintLeft_toRightOf="@id/tv_city"
            android:layout_marginLeft="@dimen/d_coupon_view_space"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.shunlai.mystore.customview.ProhibitSlideLRViewpager
        android:id="@+id/pslrv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_result"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/d_decoration_section_item_pad_t"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>