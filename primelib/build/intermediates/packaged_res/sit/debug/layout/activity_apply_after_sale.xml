<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v_bootom_dividing">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="@dimen/d_order_my_pad_b">
                <include
                    android:id="@+id/include_goods"
                    layout="@layout/include_goods_des_single"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_total_price_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                style="@style/tv_order_price_black"
                app:layout_constraintTop_toTopOf="@id/tv_total_price_v"
                app:layout_constraintBottom_toBottomOf="@id/tv_total_price_v"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/d_order_my_pad_b"/>
            <TextView
                android:id="@+id/tv_total_price_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/total"
                style="@style/tv_order_detail_status_black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cl_goods"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/d_order_my_pad_b"
                android:layout_marginTop="@dimen/d_order_my_pad_b"/>
            <View
                android:id="@+id/v_dividing_1"
                style="@style/v_dividing"
                app:layout_constraintTop_toBottomOf="@id/tv_total_price_v"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"/>
            <TextView
                android:id="@+id/tv_type_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tv_order_detail_status_black"
                android:text="@string/str_after_sale_type"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/d_order_my_pad_b"
                android:layout_marginTop="@dimen/d_order_item_pad_t"
                android:layout_marginLeft="@dimen/d_order_my_pad_b"/>
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_order_detail_pay_h"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_type_select"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                android:layout_marginTop="@dimen/d_order_my_pad_b">
                <RadioButton
                    android:id="@+id/rb_return_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/str_return_refund"
                    style="@style/btn_raido_check"
                    android:button="@null"
                    android:checked="true"
                    android:layout_marginRight="@dimen/d_order_my_pad_b"/>
                <RadioButton
                    android:id="@+id/rb_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/str_refund_only"
                    android:button="@null"
                    style="@style/btn_raido_check"/>
            </RadioGroup>
            <View
                android:id="@+id/v_dividing_2"
                style="@style/v_dividing"
                app:layout_constraintTop_toBottomOf="@id/rg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_pad_t"/>
            <TextView
                android:id="@+id/tv_refund_count"
                style="@style/w_w_after_sale_key"
                app:layout_constraintTop_toTopOf="@id/cl_count_do"
                app:layout_constraintBottom_toBottomOf="@id/cl_count_do"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                android:text="@string/str_refund_count"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_count_do"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_order_detail_pay_h"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:layout_marginRight="@dimen/d_order_detail_copy_mar_l">
                <ImageView
                    android:id="@+id/iv_subtraction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/d_order_detail_copy_mar_l"
                    android:paddingRight="@dimen/d_order_detail_copy_mar_l"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@mipmap/ic_subtraction_btn"
                    android:scaleType="centerInside"/>
                <TextView
                    android:id="@+id/tv_refund_count_V"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/d_after_sale_edit_count_min_w"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_subtraction"
                    tools:text="1"
                    style="@style/btn_after_sale_edit"/>
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/d_order_detail_copy_mar_l"
                    android:paddingRight="@dimen/d_order_detail_copy_mar_l"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_refund_count_V"
                    android:src="@mipmap/ic_add_btn"
                    android:scaleType="centerInside"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_refund_money_k"
                style="@style/w_w_after_sale_key"
                app:layout_constraintTop_toBottomOf="@id/cl_count_do"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:text="@string/str_refund_money"/>
            <TextView
                android:id="@+id/tv_refund_money_v"
                style="@style/w_w_after_sale_key"
                app:layout_constraintTop_toTopOf="@id/tv_refund_money_k"
                app:layout_constraintRight_toRightOf="@id/tv_type_select"
                tools:text="@string/str_refund_money"/>
            <View
                android:id="@+id/v_dividing_3"
                style="@style/v_dividing"
                app:layout_constraintTop_toBottomOf="@id/tv_refund_money_k"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_item_pad_t"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_refund_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_after_sale_select_h"
                app:layout_constraintTop_toBottomOf="@id/v_dividing_3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="@dimen/d_order_my_pad_b"
                android:paddingRight="@dimen/d_order_my_pad_b">
                <TextView
                    android:id="@+id/tv_refund_reason_k"
                    style="@style/w_w_after_sale_key"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/str_refund_reason"/>
                <TextView
                    android:id="@+id/tv_refund_reason_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/tv_order_price_black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_refund_reason_k"
                    android:hint="@string/str_select_please"
                    android:textColorHint="@color/c_order_price"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="@dimen/d_after_sale_v_k_space"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="@dimen/d_order_detail_copy_mar_l"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_refund_des_k"
                style="@style/w_w_after_sale_key"
                app:layout_constraintTop_toBottomOf="@id/cl_refund_reason"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:text="@string/str_refund_des"/>
            <EditText
                android:id="@+id/et_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/d_after_sale_edit_min_h"
                app:layout_constraintTop_toBottomOf="@id/tv_refund_des_k"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                app:layout_constraintRight_toRightOf="@id/tv_type_select"
                android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"
                android:background="@drawable/shape_after_sale_des_edit"
                android:hint="@string/str_optional_filling"
                android:padding="@dimen/d_after_sale_des_edit_radius"
                android:gravity="start"
                android:textColorHint="@color/c_after_sale_edit_hint"
                style="@style/tv_order_price_black"/>
            <TextView
                android:id="@+id/tv_refund_voucher_k"
                style="@style/w_w_after_sale_key"
                app:layout_constraintTop_toBottomOf="@id/et_des"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                android:layout_marginTop="@dimen/d_order_my_pad_b"
                android:text="@string/str_refund_voucher"/>

            <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                android:id="@+id/bganpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_refund_voucher_k"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_select"
                android:layout_marginTop="@dimen/d_order_detail_img_mar_b"
                app:bga_snpl_deleteDrawable="@mipmap/ic_picture_select_del"
                app:bga_snpl_deleteDrawableOverlapQuarter="false"
                app:bga_snpl_editable="true"
                app:bga_snpl_itemCornerRadius="@dimen/d_after_sale_img_radius"
                app:bga_snpl_itemSpanCount="3"
                app:bga_snpl_itemWhiteSpacing="@dimen/d_after_sale_bottom_btn_mar_t"
                app:bga_snpl_itemWidth="@dimen/d_after_sale_img_w"
                app:bga_snpl_maxItemCount="10"
                app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                app:bga_snpl_plusEnable="true"
                app:bga_snpl_sortable="true" />
            <View
                android:id="@+id/v_dividing_4"
                style="@style/v_dividing_after_sale_mar_b"
                app:layout_constraintTop_toBottomOf="@id/bganpl"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/d_order_my_pad_b"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <View
        android:id="@+id/v_bootom_dividing"
        style="@style/v_dividing_common"
        app:layout_constraintTop_toBottomOf="@id/sv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_submit"/>
    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_detail_bottom_btn_h"
        style="@style/btn_order_emphasize"
        app:layout_constraintTop_toBottomOf="@id/v_bootom_dividing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/d_after_sale_bottom_btn_mar_t"
        android:layout_marginBottom="@dimen/d_after_sale_bottom_btn_mar_t"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        android:text="@string/str_submit"/>



</androidx.constraintlayout.widget.ConstraintLayout>