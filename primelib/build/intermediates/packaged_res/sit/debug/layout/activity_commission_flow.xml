<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/d_order_tab_h"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/d_order_my_pad_b">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2021年8月"
            style="@style/tv_commission_flow_condition_black"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/ic_arrow_commission_flow_open"
            android:drawablePadding="@dimen/d_order_detail_dra_pad"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_dividing_1"
        android:layout_width="@dimen/d_common_dividing"
        android:layout_height="@dimen/d_commission_flow_divider_h"
        android:visibility="gone"
        android:background="@color/c_order_detail_btn_dividing"
        app:layout_constraintLeft_toRightOf="@id/rl_date"
        app:layout_constraintTop_toTopOf="@id/rl_date"
        app:layout_constraintBottom_toBottomOf="@id/rl_date"
        app:layout_constraintRight_toLeftOf="@id/rl_type"/>
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rl_date"
        app:layout_constraintBottom_toBottomOf="@id/rl_date"
        app:layout_constraintLeft_toRightOf="@id/v_dividing_1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/d_order_my_pad_b">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_transaction_type"
            style="@style/tv_commission_flow_condition_black"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/ic_arrow_commission_flow_open"
            android:drawablePadding="@dimen/d_order_detail_dra_pad"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@id/v_dividing_2"
        style="@style/v_dividing_common_small"
        app:layout_constraintTop_toBottomOf="@id/rl_date"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srlEnableScrollContentWhenLoaded="true"
        app:srlEnableFooterFollowWhenLoadFinished="true"
        app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <com.scwang.smart.refresh.header.ClassicsHeader
            android:id="@+id/srl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/v_dividing_2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:listitem="@layout/rv_item_commission_flow"
            android:layout_marginLeft="@dimen/d_order_my_pad_b"
            android:layout_marginRight="@dimen/d_order_my_pad_b"/>
        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:id="@+id/srl_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>