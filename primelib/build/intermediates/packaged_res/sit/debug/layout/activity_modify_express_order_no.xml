<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_common_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_order_tab_h"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="@dimen/d_order_my_pad_b"
        android:paddingRight="@dimen/d_order_my_pad_b">
        <TextView
            android:id="@+id/tv_company_k"
            style="@style/tv_fill_order_k"
            android:text="@string/logistics_company"/>
        <TextView
            android:id="@+id/tv_company_v"
            style="@style/tv_fill_order_v"
            android:hint="@string/str_select_please"
            android:textColorHint="@color/c_mycoupon_item_n"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="@dimen/d_dialog_address_result_dra_pad"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_express_order_no_k"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_order_tab_h"
        android:minWidth="@dimen/d_after_sale_k_w"
        app:layout_constraintTop_toBottomOf="@id/ll_company"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:text="@string/courier_number"
        android:gravity="center_vertical"
        style="@style/tv_order_price_black"/>
    <EditText
        android:id="@+id/et_order_no"
        style="@style/edit_create_receiving_address"
        app:layout_constraintTop_toTopOf="@id/tv_express_order_no_k"
        app:layout_constraintBottom_toBottomOf="@id/tv_express_order_no_k"
        app:layout_constraintLeft_toRightOf="@id/tv_express_order_no_k"
        app:layout_constraintRight_toLeftOf="@id/iv_clear"
        android:hint="@string/str_hint_input"
        android:singleLine="true"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/d_order_my_pad_b"/>
    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/ic_picture_select_del"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        app:layout_constraintTop_toTopOf="@id/tv_express_order_no_k"
        app:layout_constraintBottom_toBottomOf="@id/tv_express_order_no_k"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/et_order_no"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_express_order_no_k"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/c_order_divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>