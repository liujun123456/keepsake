<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/d_order_my_pad_b"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_money_k"
        android:text="@string/str_amount_money"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        style="@style/tv_after_sale_k"/>
    <TextView
        android:id="@+id/tv_money_v"
        tools:text="@string/str_amount_money"
        app:layout_constraintTop_toTopOf="@id/tv_money_k"
        app:layout_constraintLeft_toRightOf="@id/tv_money_k"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        style="@style/tv_after_sale_v"/>
    <TextView
        android:id="@+id/tv_apply_time_k"
        android:text="@string/str_apply_time"
        app:layout_constraintTop_toBottomOf="@id/tv_money_k"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_k"
        style="@style/tv_after_sale_k"/>
    <TextView
        android:id="@+id/tv_apply_time_v"
        tools:text="@string/str_amount_money"
        app:layout_constraintTop_toTopOf="@id/tv_apply_time_k"
        app:layout_constraintLeft_toRightOf="@id/tv_apply_time_k"
        app:layout_constraintRight_toRightOf="@id/tv_money_v"
        style="@style/tv_after_sale_v"/>
    <!--审核时间-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_audit_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_apply_time_k"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_k"
        app:layout_constraintRight_toRightOf="@id/tv_money_v">
        <TextView
            android:id="@+id/tv_audit_time_k"
            android:text="@string/str_audit_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/tv_after_sale_k"/>
        <TextView
            android:id="@+id/tv_audit_time_v"
            tools:text="@string/str_amount_money"
            app:layout_constraintTop_toTopOf="@id/tv_audit_time_k"
            app:layout_constraintLeft_toRightOf="@id/tv_audit_time_k"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/tv_after_sale_v"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--到账时间-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_payment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/cl_audit_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_k"
        app:layout_constraintRight_toRightOf="@id/tv_money_v">
        <TextView
            android:id="@+id/tv_payment_date_k"
            android:text="@string/str_payment_date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/tv_after_sale_k"/>
        <TextView
            android:id="@+id/tv_payment_date_v"
            tools:text="@string/str_amount_money"
            app:layout_constraintTop_toTopOf="@id/tv_payment_date_k"
            app:layout_constraintLeft_toRightOf="@id/tv_payment_date_k"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/tv_after_sale_v"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_order_code_k"
        android:text="@string/order_code"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cl_payment_date"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_k"
        style="@style/tv_after_sale_k"/>
    <TextView
        android:id="@+id/tv_order_code_v"
        tools:text="@string/str_amount_money"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_order_code_k"
        app:layout_constraintRight_toLeftOf="@id/tv_order_code_v_copy"
        app:layout_constraintLeft_toRightOf="@id/tv_order_code_k"
        style="@style/tv_after_sale_v"/>
    <TextView
        android:id="@+id/tv_order_code_v_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/copy"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_order_code_k"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="@dimen/d_order_my_pad_b"
        android:paddingLeft="@dimen/d_coupon_view_space"
        style="@style/tv_order_count_total_black"/>
    <TextView
        android:id="@+id/tv_withdrawal_account_k"
        android:text="@string/str_withdrawal_account"
        app:layout_constraintTop_toBottomOf="@id/tv_order_code_k"
        app:layout_constraintLeft_toLeftOf="@id/tv_money_k"
        style="@style/tv_after_sale_k"/>
    <TextView
        android:id="@+id/tv_withdrawal_account_v"
        tools:text="@string/str_amount_money"
        app:layout_constraintTop_toTopOf="@id/tv_withdrawal_account_k"
        app:layout_constraintLeft_toRightOf="@id/tv_withdrawal_account_k"
        app:layout_constraintRight_toRightOf="@id/tv_money_v"
        style="@style/tv_after_sale_v"/>
</androidx.constraintlayout.widget.ConstraintLayout>