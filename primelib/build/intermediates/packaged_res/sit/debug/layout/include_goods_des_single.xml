<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.android.library.YLCircleImageView
        android:id="@+id/ylciv"
        android:layout_width="@dimen/d_order_item_img_w"
        android:layout_height="@dimen/d_order_item_img_w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_goods_title"
        app:radiusYL="@dimen/d_order_item_img_radius"
        app:borderWidthYL="@dimen/d_common_dividing"
        android:layout_marginRight="@dimen/d_order_my_pad_b"
        app:borderColorYL="@color/c_order_img_stroke" />
    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ylciv"
        app:layout_constraintLeft_toRightOf="@id/ylciv"
        app:layout_constraintRight_toLeftOf="@id/tv_price"
        tools:text="上课的附近上空的飞机喀什地方艰苦地方sdfjkf的时刻JFK地方"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/tv_order_title_black"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ylciv"
        app:layout_constraintLeft_toRightOf="@id/tv_goods_title"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/order_price"
        android:layout_marginLeft="@dimen/d_order_my_pad_b"
        style="@style/tv_order_price_black"/>
    <TextView
        android:id="@+id/tv_sku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ylciv"
        app:layout_constraintLeft_toLeftOf="@id/tv_goods_title"
        app:layout_constraintRight_toLeftOf="@id/tv_count"
        tools:text="上岛咖啡是否|是两块豆腐是独立开发艰苦拉萨的飞机昂克赛拉搭街坊立刻释放圣诞节分厘卡"
        style="@style/tv_order_sku_black"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_goods_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintBottom_toTopOf="@id/tv_sku"
        android:gravity="center_vertical"
        tools:text="深大路口附近发"
        android:textColor="@color/c_taobao_guide_order_store"
        android:textSize="@dimen/d_font_sku"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ylciv"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/order_count_one"
        style="@style/tv_order_sku_black"/>
</androidx.constraintlayout.widget.ConstraintLayout>