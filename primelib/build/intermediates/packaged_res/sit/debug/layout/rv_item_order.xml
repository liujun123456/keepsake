    <LinearLayout
        android:id="@+id/ll_after_sale_fail_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cl_goods"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_order_divider"
        android:visibility="gone"
        tools:visibility="visible"
        android:padding="@dimen/d_order_my_pad_b"
        android:layout_marginTop="@dimen/d_order_my_pad_b">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_fail_reason_with_symbol"
            android:textColor="@color/c_order_price"
            android:textSize="@dimen/d_font_sku"/>
        <TextView
            android:id="@+id/tv_after_sale_fail_reason"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="ask房间昆仑山地方就奥兰多看见分厘卡士大夫就首付大概看了"
            style="@style/tv_order_sku_black"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_price_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_after_sale_fail_reason"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/tv_count_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_price_total"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/order_count_total"
            android:gravity="right"
            style="@style/tv_order_count_total_black"
            android:layout_marginTop="@dimen/d_order_tab_indicator_w" />
        <TextView
            android:id="@+id/tv_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_count_total"
            app:layout_constraintBottom_toBottomOf="@id/tv_count_total"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_count_total"
            tools:text="@string/order_price"
            style="@style/tv_order_price_black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_price_total"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/btn_l"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/d_order_item_btn_min_w"
            android:layout_height="@dimen/d_order_item_btn_h"
            android:text="@string/apply_refund"
            android:clickable="true"
            tools:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_m"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/d_order_item_pad_t"
            style="@style/btn_order_def"/>
        <TextView
            android:id="@+id/btn_m"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/d_order_item_btn_min_w"
            android:layout_height="@dimen/d_order_item_btn_h"
            android:text="@string/view_logistics"
            android:clickable="true"
            android:layout_marginLeft="@dimen/d_order_my_pad_b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_l"
            app:layout_constraintRight_toLeftOf="@id/btn_r"
            android:layout_marginTop="@dimen/d_order_item_pad_t"
            style="@style/btn_order_def"/>
        <TextView
            android:id="@+id/btn_r"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/d_order_item_btn_min_w"
            android:layout_height="@dimen/d_order_item_btn_h"
            android:text="@string/view_logistics"
            android:clickable="true"
            tools:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_m"
            android:layout_marginLeft="@dimen/d_order_my_pad_b"
            android:layout_marginTop="@dimen/d_order_item_pad_t"
            style="@style/btn_order_emphasize"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
