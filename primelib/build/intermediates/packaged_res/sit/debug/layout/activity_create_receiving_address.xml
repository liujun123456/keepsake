                   app:layout_constraintRight_toLeftOf="@id/iv_location"
                   app:layout_constraintLeft_toRightOf="@id/tv_location_k"
                   android:hint="@string/str_location_hint"/>
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_receiving_address_location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_location_v"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/v_divider_3"
                style="@style/v_dividing_common_small_w_0"
                app:layout_constraintTop_toBottomOf="@id/cl_location"
                app:layout_constraintLeft_toLeftOf="@id/cl_receiving_name"
